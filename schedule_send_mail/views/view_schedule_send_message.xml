<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_schedule_send_message_form" model="ir.ui.view">
        <field name="name">schedule.send.message.view.form</field>
        <field name="model">schedule.send.message</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Log an Activity" create="false">
                <sheet string="Activity">
                    <group>
                        <group>
                            <field name="subject" required="1" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="schedule_date" required="1"/>
                            <field name="partner_ids" widget="many2many_tags" />

                        </group>
                        <field name="note" placeholder="Log a note..." nolabel="1"/>
                        <group style="display:flex;">
                             <field nolabel="1" name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Schedule" name="action_add_schedule_send_message"
                            type="object" class="btn-primary"/>
                        <button string="Discard" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_schedule_send_message" model="ir.actions.act_window">
            <field name="name">Schedule Send Message</field>
            <field name="res_model">schedule.send.message</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_schedule_send_message_form" />
            <field name="target">new</field>
    </record>
    
</odoo>