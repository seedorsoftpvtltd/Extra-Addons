<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_line_form_chrgetype_default" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='charge_unit_type']" position="before">
                <field name = "agreement_id" invisible="1"/>
                <field name="charge_lines"  options="{'no_create': True, 'no_open': True}"
                       attrs="{'column_invisible': [('parent.picking_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_form_chrgetype_default2" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_nosuggest_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='charge_unit_type']" position="before">
                <field name = "agreement_id" invisible="1"/>
                <field name="charge_lines"  options="{'no_create': True, 'no_open': True}"
                       attrs="{'column_invisible': [('parent.picking_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>
</odoo>