<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="agreement_charges_tree_view" model="ir.ui.view">
        <field name="name">Agreement Charges Tree View</field>
        <field name="model">agreement.charges</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" invisible="1"/>
                <field name="agreement_id" invisible="1"/>

                <field name="charge_type"/>
                <field name="charge_unit_type"/>
                <field name="uom_id"/>
                <field name="product_id" domain="[('type','=','service')]"/>
                <field name="list_price"/>
                <field name="tax_id"/>
                <field name="storage_type"/>
            </tree>
        </field>
    </record>

    <record id="agreement_charges_form_view" model="ir.ui.view">
        <field name="name">Agreement Charges form View</field>
        <field name="model">agreement.charges</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="agreement_id" invisible="1"/>

                        <field name="charge_type"/>
                        <field name="charge_unit_type"/>
                        <field name="uom_id"/>
                        <field name="product_id" domain="[('type','=','service')]"/>
                        <field name="list_price"/>
                        <field name="tax_id" widget="many2many_tags" />
                        <field name="storage_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_agreement_charges" model="ir.actions.act_window">
        <field name="name">Agreement Charges</field>
        <field name="res_model">agreement.charges</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>