<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit product.product form view -->
    <record id="stock_move_normal_form_view" model="ir.ui.view">
        <field name="name">stock.move.normal.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[1]//field[@name='move_ids_without_package']//form" position="replace">
                <form string="Stock Moves">
                    <header>
                        <field name="state" widget="statusbar" invisible="1"/>
                    </header>
                    <group>
                        <group>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="additional" invisible="1"/>
                            <field name="has_move_lines" invisible="1"/>
                            <field name="company_id" invisible="1"/>

                            <field name="is_quantity_done_editable" invisible="1"/>
                        </group>
                        <group>
                            <field name="reserved_availability" string="Reserved"
                                   attrs="{'invisible': (['|','|', ('parent.state','=', 'done'), ('parent.picking_type_code', '=', 'incoming'), ('parent.immediate_transfer', '=', True)])}"
                                   invisible="1"/>
                            <field name="description_picking" string="Description" invisible="1"/>
                            <field name="x_total" invisible="1"/>
                        </group>
                        <group>
                            <field name="product_id" required="1"
                                   attrs="{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)]}"
                                   domain="[('company_id', '=', company_id)]"/>
                            <field name="is_initial_demand_editable" invisible="1"/>
                            <field name="name"/>
                            <field name="per_boe"/>
                            <field name="value_goods"/>
                            <field name="product_uom_qty" string="Initial Demand"
                                   attrs="{'invisible': [('parent.immediate_transfer', '=', True)], 'readonly': [('is_initial_demand_editable', '=', False)]}"/>
                            <field name="quantity_done" string="Done"
                                   attrs="{'readonly': [('is_quantity_done_editable', '=', False)]}"/>
                            <field name="product_uom" string="UOM"
                                   attrs="{'readonly': [('state', '!=', 'draft'), ('additional', '=', False)]}"
                                   options="{'no_open': True, 'no_create': True}" groups="uom.group_uom"/>


                        </group>
                        <group>
                            <field name="reserved_availability" string="Reserved"
                                   attrs="{'invisible': (['|','|', ('parent.state','=', 'done'), ('parent.picking_type_code', '=', 'incoming'), ('parent.immediate_transfer', '=', True)])}"
                                   invisible="1"/>
                            <field name="description_picking" string="Description" invisible="1"/>
                            <field name="x_total" invisible="1"/>
                            <field name="net_weight"/>
                            <field name="gross_weight"/>
                            <field name="volume"/>
                            <field name="sh_sec_done_qty"/>
                            <field name="sh_sec_qty" string="Secondary Demand Qty"/>
                            <field name="sh_sec_uom"/>
                        </group>
                    </group>
                </form>
            </xpath>
        </field>
    </record>
</odoo>