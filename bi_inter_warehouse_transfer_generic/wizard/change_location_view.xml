<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_change_location_wizard" model="ir.ui.view">
		<field name="name">change.location.wiz.form</field>
		<field name="model">change.location.wiz</field>
		<field name="arch" type="xml">
			<form string="Move Transfer">
				<group colspan="2" col="4">
					<field name="from_loc_id" context="{'loc' : True}" attrs="{'readonly': [('picking_type_code', '=', 'incoming')],
					'required': [('picking_type_code', '!=', 'incoming')]
						}" widget='selection'/>
					<field name="dest_loc_id" context="{'loc' : True}" attrs="{'readonly': [('picking_type_code', '=', 'outgoing')],
					'required': [('picking_type_code', '!=', 'outgoing')]}"
					widget='selection'/>
					<field name="company_id" readonly='1' invisible="1"/>
					<field name="picking_type_code" invisible="1"/>
				</group>
				<footer>
					<button name="update_locations" string="Change" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>  

	<record id="action_change_location" model="ir.actions.act_window">
		<field name="name">Move Transfer</field>
		<field name="res_model">change.location.wiz</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>

