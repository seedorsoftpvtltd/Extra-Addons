<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <record id="email_template_sale_report" model="mail.template">
			<field name="name">Monthly sales Report</field>
			<field name="email_from">${(user.email or '')|safe}</field>
			<field name="subject">${user.company_id.name} Monthly sales Report</field>
			<field name="email_to">fousia@seedorsoft.com</field>
			<field name="lang">${object.lang}</field>
			<field name="model_id" ref="odoo_mo_monthlysales.model_sale_order"/>
<!--			<field name="report_template" ref="monthly_sale_report_email.email_monthly_salessss"/>-->
			<field name="report_name">Monthly sales Report</field>

			<field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                <div class="page">
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Hello</p>
                        <p> Monthly Sale Report.</p>

                    </div>

                </div>
                ]]>
            </field>
        </record>

		<report id="email_monthly_salessss"
                model="sale.order"
                string="Monthly Sales Report"
                report_type="qweb-pdf"
                name="odoo_mo_monthlysales.monthly_sales_report"
                file="odoo_mo_monthlysales.monthly_sales_report"
                menu="False"/>



        <template id="monthly_sales_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">

                         <table class="table table-bordered" style="border: 1px solid #000;">
                      <t t-set="counter" t-value="0"/>
                               <tbody>
                        <tr>
                            <th style="text-align: center;color: #000;text-color: #000;">Product</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Quantity</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Amount</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Order Date</th>

                        </tr>
                        <tr>

                              <t t-foreach='o.order_line' t-as='line'>

                                     <td style="height:5px;text-align: center;color: #000;text-color: #000"><t t-esc="line.product_id.name"/></td>
                                     <td style="height:5x;text-align: center;color: #000;text-color: #000;"><t t-esc="line.qty_invoiced"/></td>
                                     <td style="height:5x;text-align: center;color: #000;text-color: #000;"><t t-esc="line.price_unit"/></td>
                                     <td style="height:5x;text-align: center;color: #000;text-color: #000;"><t t-esc="doc.date_order"/></td>

                               </t>

                           </tr>
                            </tbody>
                        </table>



                    </div>
                </t>
                </t>
            </t>
        </template>
    </data>
</odoo>