<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_tax_srt">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <h3>Tax Report</h3>
                    <div class="row">
                        <div class="col-3">
                            <strong>Company:</strong>
                            <p t-esc="env.company.name"/>
                        </div>
                        <div>
                            <t t-if="data['date_from']">
                                <strong>Date from :</strong>
                                <span t-esc="data['date_from']"/>
                            </t>
                            <br/>
                            <t t-if="data['date_to']">
                                <strong>Date to :</strong>
                                <span t-esc="data['date_to']"/>
                            </t>
                        </div>
                    </div>
                    <br/>

                    <h5>Cost</h5>
                    <table class="table table-sm table-reports">
                        <thead>
                            <tr align="left">
                                <th>Date</th>
                                <th>Voucher No</th>
                                <th>Client</th>
                                <th>A/c Name</th>
                                <th>Total</th>
                                <th>VAT</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <br/>

                            <tr align="left" t-foreach="cost" t-as="line">
                                <td>
                                    <span t-esc="line.get('date')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('move_name')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('client')"/>
                                </td>
                                <td>
                                    <span t-esc="line.get('taxes_account')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('sub_total')"
                                          />
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('taxes')"
                                          />
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('total')"
                                          />
                                </td>
                            </tr>

                    </table>

                    <br/>
                    <h5>Income</h5>
                    <table class="table table-sm table-reports">
                        <thead>
                            <tr align="left">
                                <th>Date</th>
                                <th>Voucher No</th>
                                <th>Client</th>
                                <th>A/c Name</th>
                                <th>Total</th>
                                <th>VAT</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <br/>

                            <tr align="left" t-foreach="income" t-as="line">
                                <td>
                                    <span t-esc="line.get('date')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('move_name')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('client')"/>
                                </td>
                                <td>
                                    <span t-esc="line.get('taxes_account')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('sub_total')"
                                    />
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('taxes')"/>
                                </td>
                                <td>
                                    <span t-att-style="style" t-esc="line.get('total')"/>
                                </td>
                            </tr>

                    </table>

