        <field name="arch" type="xml">
            <form>
                <group string="Files for Sale Pricelist ">
                    <group >
                        <div>
                            <p>import_sale_pricelist.csv <a href="import_bridge_axis/static/description/Sale Pricelist/import_sale_pricelist.csv" ><i class="fa fa-download"></i></a></p>
