<odoo>
    <record id="view_import_inventory_wizard" model="ir.ui.view">
        <field name="name">import.inventory.form</field>
        <field name="model">import.inventory</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="file_option" widget="radio"/><div style="height:20px;"></div>
                        <field name="import_file"/>
                    </group>
                    <group>
                        <field name="product_by" widget="radio"/><div style="height:10px;"></div>
                    </group>
                </group>
                <footer>
                    <button name="import_inventory" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_import_inventory_action">
        <field name="name">Import Inventory</field>
        <field name="res_model">import.inventory</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_inventory_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


                <!--    Export Inventory    -->
        <record id="view_export_inventory_wizard" model="ir.ui.view">
        <field name="name">import.inventory.form</field>
        <field name="model">import.inventory</field>
        <field name="arch" type="xml">
            <form>
                <group string="Files for Inventory">
                    <group>
                        <div>
                            <p>import_inventory(name).csv <a href="import_bridge_axis/static/description/Inventory/import_inventory(name).csv" ><i class="fa fa-download"></i></a></p>


                            <p>import_inventory(code).csv <a href="import_bridge_axis/static/description/Inventory/import_inventory(code).csv" ><i class="fa fa-download"></i></a></p>
                            <p>import_inventory(code).xlsx <a href="import_bridge_axis/static/description/Inventory/import_inventory(code) .xlsx" ><i class="fa fa-download"></i></a></p>

                            <p>import_inventory(name) (barcode).csv <a href="import_bridge_axis/static/description/Inventory/import_inventory(name) (barcode).csv" ><i class="fa fa-download"></i></a></p>
                            <p>import_inventory(name) (barcode).xlsx<a href="import_bridge_axis/static/description/Inventory/import_inventory(name) (barcode) .xlsx" ><i class="fa fa-download"></i></a></p>


                        </div>
                    </group>
                </group>
                <footer>
                    <button string="Ok" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_export_inventory_action">
        <field name="name">Export inventory</field>
        <field name="res_model">import.inventory</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_export_inventory_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
