<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_emp_payslip">
        <t t-call="web.html_container">
            <div class="page">
                <div class="oe_structure"/>
                <table width="100%" style="font-size:21px;border-style: none;margin-bottom:15px;">
                    <tr style="border-style: none;">
                        <td style="border-style: none;">
                            <center>
                                <strong>Payslip Report</strong>
                            </center>
                        </td>
                    </tr>
                </table>
                <table style="background-color:black;">
                    <tr t-as="record">
                        <t t-foreach="get_features" t-as="feat">
                            <th style="background-color:grey;">
                                <center>
                                    <span t-esc="feat"/>
                                </center>
                            </th>
                        </t>
                    </tr>

                    <t t-foreach="get_payslip_details" t-as="record">
                        <tr style="background-color:white;">
                            <t t-foreach="get_features" t-as="feat">
                                <td>
                                    <t t-if="record.get(feat)">
                                        <center>
                                            <span t-esc="record[feat][0]"/>
                                        </center>
                                    </t>
                                    <t t-else="">
                                        <center>
                                            <span>0.0</span>
                                        </center>
                                    </t>
                                </td>
                            </t>
                        </tr>
                    </t>
                    <t t-foreach="get_total" t-as="total">
                        <tr style="background-color:white;">
                            <t t-foreach="get_features" t-as="feat">
                                <td>
                                    <t t-if="total.get(feat)">
                                        <center>
                                            <span style="font-weight: bold; 'font_size': 14;" t-esc="total[feat]"/>
                                        </center>
                                    </t>
                                </td>
                            </t>
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>
</odoo>
