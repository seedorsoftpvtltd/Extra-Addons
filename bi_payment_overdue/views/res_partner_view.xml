<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- followup of customers views -->

		<record id="view_partner_inherit_followup_form" model="ir.ui.view">
			<field name="name">res.partner</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
<!--				<xpath expr="//field[@name='website']" position="after">-->

<!--					<field name="result_over"/>-->
<!--				</xpath>-->
				<page name="accounting" position='after'>
					<page string="Overdue Payments" groups="account.group_account_invoice"
						name="payment_tab">

						<div class="oe_right" name="followup_button">
							<button name="do_button_print" type="object"
								string="Print Overdue Payments" 
								help="Print overdue payments report independent of follow-up line"
								 />
							<button name="do_partner_mail" type="object" string="Send Overdue Payment"
								
								help="If not specified by the latest follow-up level, it will send from the default email template"
								 />
						</div>
						<group></group>
<!--						<div attrs="{'invisible': [('balance_invoice_over_ids.result_over', '=',0.00)]}">-->

						<field name="balance_invoice_over_ids">
							<tree string="Invoice line" editable="bottom" create="false"
								delete="false"  colors="red:(not date_due or date_due&lt;=current_date) and result_over&gt;0">
								<field name="invoice_date" readonly="True" />
								<field name="state" readonly="True" invisible="1"/>
								<field name="name" readonly="True" />
								<field name="currency_id" readonly="True"/>
<!--								<field name="invoice_currency" readonly="True"/>-->
								<field name="company_id" readonly="True"
									groups="base.group_multi_company" />
								<field name="invoice_date_due" readonly="True" />
								<field name="amount_total" readonly="True" string = "Invoices/Debits"/>
								<field name="credit_amount_over" readonly="True"  string = "Payments/Credits"/>
								<field name="result_over" readonly="True" string = "Balance"/>
							</tree>
						</field>

						<group class="oe_subtotal_footer oe_right">
							<field name="payment_amount_due_amt_over" />

						</group>
						<group class="oe_subtotal_footer oe_right">
							<field name="payment_amount_overdue_amt_over" />
						</group>
						<!--group>
							<group>
							<field name="rec1"/>
						</group>
						</group-->

					</page>
				</page>
			</field>
		</record>

	</data>
</odoo>
