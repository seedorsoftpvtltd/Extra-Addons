            <!--            <t t-set="state" t-value="state.get('onboarding_step5_state')" />-->
        </t>
    </template>

    <template id="payslip_dashboard_onboarding_panel" name="onboarding.dashboard.onboarding.panel">
        <t t-call="payslip_periods_onboard.onboarding_default_container">
            <t t-set="classes" t-value="'o_onboarding_blue'"/>
            <t t-set="bg_image" t-value="'/onboarding/static/src/img/employee_dashboard_onboarding_bg.jpg'"/>
            <!--            <t t-set="close_method" t-value="'action_close_account_dashboard_onboarding'"/>-->
            <!--            <t t-set="close_model" t-value="'res.company'"/>-->
            <!--            <t t-set="text_completed">Congratulations! You are all set.</t>-->

            <t t-call="payslip_periods_onboard.payslip_step1" name="payroll_setup"/>
            <t t-call="payslip_periods_onboard.payslip_step2" name="manual_setup"/>
            <t t-call="payslip_periods_onboard.payslip_step3" name="confirm_setup"/>
            <t t-call="payslip_periods_onboard.payslip_step4" name="advice_setup"/>
            <t t-call="payslip_periods_onboard.payslip_step5" name="communicate_setup"/>

        </t>
    </template>
