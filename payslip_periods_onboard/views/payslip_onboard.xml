<odoo>
    <!-- ONBOARDING STEPS -->

    <template id="payslip_step1">
        <t t-call="payslip_periods_onboard.onboarding_default_step">
            <t t-set="title">Auto Payroll</t>
            <t t-set="description">
                Edit the auto created payslip period document, by default the payslips get auto generated by the end of month.
            </t>
            <t t-set="sl">1</t>
            <!--            <t t-set="btn_text">Review</t>-->
