<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- followup of customers views -->


		<record id="account_invoice_extend_form_overdue_finance" model="ir.ui.view">
			<field name="name">account.move.extend.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='amount_residual']" position="after">
					<field name="credit_amount_over" invisible="1" />
					<field name="result_over" invisible="1" />
				</xpath>
			</field>
		</record>

		<record id="account_invoice_extend_tree_overdue_finance" model="ir.ui.view">
			<field name="name">account.move.extend.tree</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_invoice_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='invoice_date']" position="after">
					<field name="credit_amount_over" invisible="1" />
					<field name="result_over" invisible="1" />
				</xpath>
			</field>
		</record>

	</data>
</odoo>