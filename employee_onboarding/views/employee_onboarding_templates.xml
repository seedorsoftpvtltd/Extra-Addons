<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ONBOARDING STEPS -->

    <template id="onboarding_employee_step1">
        <t t-call="employee_onboarding.onboarding_default_step">
            <t t-set="title">Build your departments</t>
            <t t-set="description">
                Review and finalize your Company’s Departments and setup the Job Positions.
            </t>
            <t t-set="btn_text">Review</t>
            <t t-set="btn_text1">Define</t>
          <t t-set="cnt_text" t-value="request.env['hr.department'].search_count([])">
              <t t-esc="cnt_text">Review</t>
            </t>
            <t t-set="cnt_desc">Records</t>+
             <t t-set="sl">1</t>
            <t t-set="method" t-value="'onboarding_step_action'" />
            <t t-set="method1" t-value="'onboarding_step1_action'" />
            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('onboarding_step1_state')" />
        </t>
    </template>

    <template id="onboarding_step2">
        <t t-call="employee_onboarding.onboarding_default_step">
            <t t-set="title">Manage Employees</t>
            <t t-set="description">Create or Import your employee details.</t>
            <t t-set="btn_text3">Create</t>
            <t t-set="btn_text4">Upload</t>
            <t t-set="btn_text5">Google sync</t>
            <t t-set="sl">2</t>
      <t t-set="cnt_text" t-value="request.env['hr.document'].search_count([])">
          <t t-esc="cnt_text">Upload</t>
            </t>
            <t t-set="cnt_desc">Records</t>
            <!--            <t t-set="done_text">Step 2 Completed!</t>-->
            <t t-set="method3" t-value="'onboarding_step3_action'" />
            <t t-set="method4" t-value="'onboarding_step4_action'" />
            <t t-set="method5" t-value="'onboarding_step5_action'" />
<!--             <t t-set="methodcnt" t-value="'onboarding_step2_count'" />-->

            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('onboarding_step2_state')" />
        </t>
    </template>
    <template id="onboarding_step3">
        <t t-call="employee_onboarding.onboarding_default_step">
            <t t-set="title">Add Contract</t>
            <t t-set="description">Finalize employee contract and keep them in running stage, use predefined salary structure.</t>
            <t t-set="sl">3</t>

            <t t-set="btn_text6">Assign</t>
<!--            <t t-set="btn_text1">Import Template</t>-->
<!--            <t t-set="btn_text2">Upload</t>-->

       <t t-set="cnt_text" t-value="request.env['hr.contract'].search_count([])">
           <t t-esc="cnt_text">Contract</t>


            </t>
            <t style="font-size:2px;" t-set="cnt_desc">Records</t>
            <!--            <t t-set="done_text">step 3 Completed!</t>-->
            <t t-set="method6" t-value="'onboarding_step6_action'" />

<!--            <t t-set="method1" t-value="'onboarding_step3_action1'" />-->
<!--            <t t-set="method2" t-value="'onboarding_step3_action2'" />-->
            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('onboarding_step3_state')" />
        </t>
    </template>
    <template id="onboarding_step4">
        <t t-call="employee_onboarding.onboarding_default_step">
            <t t-set="title">Update the Shift and Salary Structure</t>
            <t t-set="description">Update and finalize your employee’s shifts.Verify the salary structure based on the employee’s category.</t>
            <t t-set="btn_text7">Schedule</t>
            <t t-set="btn_text8">Structure</t>
            <t t-set="cnt_text" t-value="request.env['resource.calendar'].search_count([])">
                <t t-esc="cnt_text">Schedule</t>
            </t>
            <t t-set="cnt_desc">Records</t>
            <t t-set="sl">4</t>
<!--            <t t-set="done_text">step 4 set.</t>-->
            <t t-set="method7" t-value="'onboarding_step7_action'" />
            <t t-set="method8" t-value="'onboarding_step8_action'" />
<!--          <t t-set="methodcnt" t-value="'onboarding_step4_count'" />-->
<!---->
            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('onboarding_step4_state')" />
        </t>
    </template>
    <template id="onboarding_step5">
        <t t-call="employee_onboarding.onboarding_default_step">
            <t t-set="title">Review the Leave</t>
            <t t-set="description">Review and approve the auto allocated leaves of the employees.</t>
            <t t-set="btn_text9">Allocate</t>
            <t t-set="cnt_text" t-value="request.env['hr.leave.allocation'].search_count([])">
                <t t-esc="cnt_text">Leave allocations</t>
            </t>
            <t t-set="cnt_desc">Records</t>
            <t t-set="sl">5</t>
<!--            <t t-set="done_text">step 5 set.</t>-->
            <t t-set="method9" t-value="'onboarding_step9_action'" />
            <t t-set="model" t-value="'res.company'" />
            <t t-set="state" t-value="state.get('onboarding_step5_state')" />
        </t>
    </template>

    <template id="employee_dashboard_onboarding_panel" name="onboarding.dashboard.onboarding.panel">
        <t t-call="employee_onboarding.onboarding_default_container">
            <t t-set="classes" t-value="'o_onboarding_blue'"/>
            <t t-set="bg_image" t-value="'/onboarding/static/src/img/employee_dashboard_onboarding_bg.jpg'"/>
<!--            <t t-set="close_method" t-value="'action_close_account_dashboard_onboarding'"/>-->
<!--            <t t-set="close_model" t-value="'res.company'"/>-->
<!--            <t t-set="text_completed">Congratulations! You are all set.</t>-->

            <t t-call="employee_onboarding.onboarding_employee_step1" name="department_setup" />
            <t t-call="employee_onboarding.onboarding_step2" name="jobs_setup" />
            <t t-call="employee_onboarding.onboarding_step3" name="employee_setup" />
            <t t-call="employee_onboarding.onboarding_step4" name="contract_setup" />
            <t t-call="employee_onboarding.onboarding_step5" name="leave_setup" />

        </t>
    </template>
    <!-- SAMPLE INVOICE EMAIL -->

</odoo>
