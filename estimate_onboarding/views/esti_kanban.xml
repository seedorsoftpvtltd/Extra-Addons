<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_esti_kanban" model="ir.ui.view">
        <field name="name">estimate kanban</field>
        <field name="model">sale.estimate.job</field>
        <field name="arch" type="xml">
            <kanban banner_route="/estimate/estimate_dashboard_onboarding">
                <field name="number"/>
                <field name="partner_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_details">
                                <ul>
                                    <li><field name="number"/>
                                    </li>
                                    <li>Customer: <field name="partner_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
