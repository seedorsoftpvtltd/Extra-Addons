            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="action_esti_kanban"/>
            <field name="act_window_id" ref="job_cost_estimate_customer.action_estimate_job"/>
        </record>
