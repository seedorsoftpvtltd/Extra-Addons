<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ONBOARDING STEPS -->

    <template id="estimate_step1">
        <t t-call="estimate_onboarding.onboarding_default_step">
            <t t-set="title">Customers</t>
            <t t-set="description">
                  Create / Upload the Customer Data
            </t>
            <t t-set="sl">1</t>
                        <t t-set="btn_text1">Add</t> <t t-set="btn_text3">Import</t>
                        <t t-set="method1" t-value="'onboarding_action_estimate_create_approve'" />
                        <t t-set="method2" t-value="'onboarding_action_estimate_import_approve'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>

    <template id="estimate_step2">
        <t t-call="estimate_onboarding.onboarding_default_step">
            <t t-set="title">Products</t>
            <t t-set="description">
                Oversee Your Products
            </t>
            <t t-set="sl">2</t>
                   <t t-set="btn_text1">Include</t> <t t-set="btn_text3">Import</t>
                        <t t-set="method1" t-value="'onboarding_action_estimate_create_approve1'" />
                        <t t-set="method2" t-value="'onboarding_action_estimate_import_approve'" />
                        <t t-set="model" t-value="'res.company'" />

        </t>
    </template>

    <template id="estimate_step3">
        <t t-call="estimate_onboarding.onboarding_default_step">
            <t t-set="title">Services</t>
            <t t-set="description">
                Create / Import the required services
            </t>
            <t t-set="sl">3</t>
                       <t t-set="btn_text1">Add</t> <t t-set="btn_text3">Import</t>
                        <t t-set="method1" t-value="'onboarding_action_estimate_create_approve2'" />
                        <t t-set="method2" t-value="'onboarding_action_estimate_import_approve'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>

    </template>

    <template id="estimate_step4">
        <t t-call="estimate_onboarding.onboarding_default_step">
            <t t-set="title">Estimates</t>
            <t t-set="description">
              Create Relocation Job Estimates
            </t>
            <t t-set="sl">4</t>

                         <t t-set="btn_text1">Create</t>
                        <t t-set="method1" t-value="'onboarding_action_estimate_create_approve3'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>



    <template id="estimate_onboarding_onboarding_panel" name="estimate.onboarding.dashboard.panel">
        <t t-call="estimate_onboarding.onboarding_default_container">
            <t t-set="classes" t-value="'o_onboarding_blue'"/>
            <t t-set="bg_image" t-value="'/onboarding/static/src/img/employee_dashboard_onboarding_bg.jpg'"/>
            <!--            <t t-set="close_method" t-value="'action_close_account_dashboard_onboarding'"/>-->
            <!--            <t t-set="close_model" t-value="'res.company'"/>-->
            <!--            <t t-set="text_completed">Congratulations! You are all set.</t>-->

            <t t-call="estimate_onboarding.estimate_step1" name="gen_setup"/>
            <t t-call="estimate_onboarding.estimate_step2" name="allocae_setup"/>
            <t t-call="estimate_onboarding.estimate_step3" name="create_setup"/>
            <t t-call="estimate_onboarding.estimate_step4" name="app_setup"/>


        </t>
    </template>
    <!-- SAMPLE INVOICE EMAIL -->

</odoo>
