<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
         <record id="mail_template_contract" model="mail.template">
            <field name="name">Contract Mail</field>
            <field name="model_id" ref="sales_contract_seperate_module.model_account_analytic_account"/>
            <field name="subject">Contract Mail For Review</field>
            <field name="email_from">${(object.company_id.email_formatted)| safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                                           
                                                
                                            Dear ${object.sudo().partner_id.name or 'Madam/Sir'},
                                            Here is your Contract ${(object.name or '').replace('/','-')} is ready for review.
                                            <br/>
                                            <div style="margin: 16px 0px 16px 0px;">
                                                Do not hesitate to contact us if you have any questions.
                                            </div>
                                            <br/>
                                            <br/>
                                            Thank You.
                                            <br/>
                              </p>          
                                  </div>  
            </field>
            <!-- <field name="report_template" ref="contract_report"/> -->
            <field name="report_name">${(object.name)}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Contract Mail Template -->
        

    </data>
</odoo>