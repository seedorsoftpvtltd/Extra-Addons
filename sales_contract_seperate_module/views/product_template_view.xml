<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="contract_warranty" />
                        <label for="contract_warranty" />
                    </div>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="after">
                    <field name="recuring_period" attrs="{'invisible': [('contract_warranty','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_search_view_inherit" model="ir.ui.view">
            <field name="name">product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <filter name="filter_to_purchase" position="after">
                    <filter string="Contract/Warranty Products" name="filter_to_contract" domain="[('contract_warranty', '=', True)]"/>
                </filter>
            </field>
        </record>

</odoo>