<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                   <field name="recuring_period"/>
               </field>
            </field>
        </record>

        <record id="action_contract" model="ir.actions.act_window">
            <field name="name">Analytic Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.account</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="analytic.view_account_analytic_account_search"/>
            <field name="context">{'search_default_running_state':1}</field>
        </record>
<!--parent="sale.sale_menu_root"-->
         <menuitem id="menu_analytic_contract"
            name="Contracts"

            sequence="4" groups="sales_team.group_sale_salesman"/>

        <menuitem id="menu_contract"
            name="Contracts"
            action="action_contract"
            parent="sales_contract_seperate_module.menu_analytic_contract"
            sequence="1" groups="sales_team.group_sale_salesman"/>

</odoo>