<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="mrp_production_workorder_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.work.order.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Capacity">
                    <group>
                        <group>
                            <label for="wc_available_capacity"/>
                            <div class="o_row">
                                <field name="wc_available_capacity" widget="float_time"/>
                                hours
                            </div>
                            <label for="wo_capacity_requirements"/>
                            <div class="o_row">
                                <field name="wo_capacity_requirements" widget="float_time"/>
                                hours
                            </div>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
