<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_daily_timesheet_report" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref='hr.view_employee_form'/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">           
                <button name="%(abs_daily_timesheet_report_email.open_employee_view_timesheet_record_action)d" class="oe_stat_button" icon="fa-envelope" string="Timesheet Email" type="action"/>
            </xpath>
        </field>
    </record> 

</odoo>

