<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="tmp_customer_form" name="Employee Details">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">

                       <form action="/employee/form/submit">
                          <div class="row">
                           <div class="col-lg-8">
                           <div class="row">
<!--                            <div class="col-lg-12">-->
                               <div class="form-group col-xl-12">
                                 <center><h4>Employee Information</h4></center>
                               </div>

                            <div class="form-group col-xl-6">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" name="name" id="name" required="true" t-att-value="employee.name"/>

                            </div>

                            <div class="form-group col-xl-6">
                                <label for="name">Photo:</label>

                                   <img t-if="employee.image_1920" t-att-src="image_data_uri(employee.image_1920)" style="width:100px;height:100px; float:right;"/>
                            </div>


                           <div class="form-group col-xl-6">
                                <label for="name">Work Mobile:</label>
                                <input type="text" class="form-control" name="mobile_phone"
                                 id="mobile" required="true" t-att-value="employee.mobile_phone"/>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email"
                                 id="email" required="true" t-att-value="employee.work_email"/>
                            </div>
                            <div class="form-group col-xl-6">
                                <label for="name">Phone:</label>
                                <input type="text" class="form-control" name="phone"
                                id="phone" required="true" t-att-value="employee.work_phone"/>

                            </div>
<!--                           </div>-->
                                <div class="form-group col-xl-6">
                                <label for="name">Department:</label>
<!--                                <input type="text" class="form-control" name="department"-->
<!--                                id="phone" required="true" t-att-value="employee.department_id.id"/>-->
                                    <select name="employee.department_id" class="form-control">
<!--                                    <option value="">Select Department</option>-->
                                    <t t-foreach="department or []" t-as="department" name="department_id">
                                        <option t-att-value="department.id" t-att-selected="department.id == employee.department_id.id">
                                            <t t-esc="department.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Job Position:</label>
<!--                                <input type="text" class="form-control" name="job_position"-->
<!--                                id="phone" required="true" t-att-value="employee.job_id.id"/>-->
                               <select name="employee.job_id" class="form-control">
<!--                                    <option value="">Select Job Position</option>-->
                                    <t t-foreach="job or []" t-as="job">
                                        <option t-att-value="job.id" t-att-selected="job.id == employee.job_id.id">
                                            <t t-esc="job.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                           <div class="clearfix" />
                               <div class="form-group col-xl-12">
                                    <center><h4>Private Information</h4></center>
                               </div>


<!--                           <div class="form-group col-xl-6">-->
<!--                                <label for="name">Private Email:</label>-->
<!--                                <input type="email" class="form-control" name="private_email"-->
<!--                                id="phone" required="true" t-att-value="employee.private_email"/>-->
<!--                            </div>-->

                               <div class="form-group col-xl-6">
                                <label for="name">Private Email:</label>
                                <input type="text" class="form-control" name="partner_email"
                                id="phone" required="true" t-att-value="partner.email"/>

                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Private Phone:</label>
                                <input type="text" class="form-control" name="private_phone"
                                id="phone" required="true" t-att-value="employee.phone"/>
                            </div>

<!--                           </div>-->
                           <div class="clearfix" />
                               <div class="form-group col-xl-6">
                                <label for="name">Identification ID:</label>
                                <input type="text" class="form-control" name="identification_id"
                                id="phone" required="true" t-att-value="employee.identification_id"/>
                            </div>
                               <div class="clearfix" />
                           <div class="form-group col-xl-6">
                                <label for="name">Emergency Contact:</label>
                                <input type="text" class="form-control" name="emergency_contact"
                                id="phone" t-att-value="employee.emergency_contact"/>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Emergency Phone:</label>
                                <input type="text" class="form-control" name="emergency_phone"
                                id="phone" t-att-value="employee.emergency_phone"/>
                            </div>

                           <div class="form-group col-xl-6">
                                <label for="name">Marital Status:</label>

                                      <input type="text" class="form-control" name="marital" placeholder="single/married/cohabitant/widower/divorced"
                                id="phone" t-att-value="employee.marital"/>

<!--                                <input type="text" class="form-control" name="marital" placeholder="single / married"-->
<!--                                id="phone" t-att-value="employee.marital"/>-->

                               <!--select class="form-control" name="marital">
                                         <option t-attf-value="single">Single</option>
                                         <option t-attf-value="married">Married</option>
                                         <option t-attf-value="cohabitant">Legal Cohabitant</option>
                                         <option t-attf-value="widower">Widower</option>
                                         <option t-attf-value="divorced">Divorced</option>


                                       <t t-foreach="marital or []" t-as="maritall">
                                            <option t-attf-value="#{maritall.id}"><t t-esc="maritall"/></option>
                                        </t>
                                    </select-->
                            </div>
<!--                            <t set="var" t-value="marital"/>-->


                               <div class="form-group col-xl-6">

                                <label for="name">Children:</label>
                                <input type="text" class="form-control" name="children"
                                id="phone" required="true" t-att-value="employee.children"/>

                            </div>


                           <div class="clearfix" />
                               <div class="form-group col-xl-12">
                                    <center><h4>Citizenship</h4></center>
                               </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Nationality(Country):</label>
<!--                                <label class="col-form-label" for="country_id">Country</label>-->
                                <select name="employee.country_id" class="form-control">
<!--                                    <option value="">Select Country</option>-->
                                    <t t-foreach="countries or []" t-as="country">
                                        <option t-name="country" t-att-value="country.id" t-att-selected="country.id == employee.country_id.id" >
                                            <t t-esc="country.name"/>
                                        </option>

                                    </t>
                                </select>
<!--                                <input type="text" class="form-control" name="country_id"-->
<!--                                id="phone" required="true" t-att-value="employee.country_id"/>-->
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Gender:</label>
                                          <input type="text" class="form-control" name="gender" placeholder="male /female /other"
                                     id="phone" t-att-value="employee.gender"/>


                                    <!--select class="form-control" name="gender">
                                         <option t-attf-value="male">Male</option>
                                        <option t-attf-value="female">Female</option>
                                        <option t-attf-value="other">Other</option>


                                       <t t-foreach="gender" t-as="genders">
                                            <option t-attf-value="#{genders.id}">
                                                <t t-esc="gender"/>
                                            </option>
                                        </t>
                                    </select-->
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Date Of Birth:</label>
                                <input type="text" class="form-control" name="bbirthday"
                                id="phone" required="true" placeholder="YYYY-MM-DD" style="color:#898687" t-att-value="employee.birthday"/>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Place Of Birth:</label>
                                <input type="text" class="form-control" name="place_of_birth"
                                id="phone" t-att-value="employee.place_of_birth"/>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Country Of Birth:</label>
                                <select name="employee.country_of_birth" class="form-control">
<!--                                    <option value="">Select Country</option>-->
                                    <t t-foreach="countries or []" t-as="country">
                                        <option t-att-value="country.id" t-att-selected="country.id == employee.country_of_birth.id">
                                            <t t-esc="country.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>

                               <div class="form-group col-xl-12">
                                    <center><h4>Work Permit</h4></center>
                               </div>

                           <div class="form-group col-xl-6">
                                <label for="name">Visa Number:</label>
                                <input type="text" class="form-control" name="visa_no"
                                id="phone" t-att-value="employee.visa_no"/>
                            </div>
                           <div class="form-group col-xl-6">
                                <label for="name">Permit Number:</label>
                                <input type="text" class="form-control" name="permit_no"
                                id="phone" t-att-value="employee.permit_no"/>
                            </div>
                               <div class="form-group col-xl-6">
                                <label for="name">Passport ID:</label>
                                <input type="text" class="form-control" name="passport_id"
                                id="phone" required="true" t-att-value="employee.passport_id"/>
                            
                            </div>
                               <div class="form-group col-xl-6">
                                <label for="name">Passport Expiry:</label>
                                <input type="text" class="form-control" name="passport_expiry_date"
                                id="phone" placeholder="YYYY-MM-DD" style="color:#898687" t-att-value="employee.passport_expiry_date"/>
                            </div>

                           <div class="form-group col-xl-6">
                                <label for="name">Visa Expire:</label>
                                <input type="text" class="form-control" name="visa_expire"
                                id="phone" placeholder="YYYY-MM-DD" style="color:#898687" t-att-value="employee.visa_expire"/>
                            </div>
                           </div>
                            <button type="submit" class="btn btn-primary">Confirm</button>

                           </div>
                          </div>
                        </form>
                     </div>
                    </div>


          </t>
    </template>
</odoo>
