<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form_do">
        <field name="name">do.res.config.settings.mod</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" position="after">
                <h2>Delivery Orders</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_delivery_order_note" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_delivery_order_note" />
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company" />
                            <div class="text-muted">
                                Show standard terms &amp; conditions on Delivery orders
                            </div>
                            <div class="content-group" attrs="{'invisible': [('use_delivery_order_note','=',False)]}">
                                <div class="mt16">
                                    <field name="delivery_order_note" placeholder="Insert your terms &amp; conditions here..." />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>