<odoo>

    <record id="view_package_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[3]//field[@name='product_uom']" position="after">
                <field name="net_weight"/>
                <field name="gross_weight"/>
                <field name="volume"/>
            </xpath>
            <xpath expr="//page[3]//field[@name='product_id']" position="after">
                <field name="hs_code"/>
                <field name="per_boe"/>
                <field name="value_goods"/>
                <field name="currency_id" invisible="0" string=" "/>
            </xpath>

        </field>
    </record>


</odoo>