<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="view_purchase_type_tree" model="ir.ui.view">
        <field name="name">purchase.type.tree</field>
        <field name="model">purchase.type</field>
        <field name="arch" type="xml">
            <tree string ="Purchase Order Type">
                <field name="purchase_order_type"></field> 
	    </tree>
        </field>
    </record>

   <record id="view_purchase_type_form" model="ir.ui.view">
        <field name="name">purchase.type.form</field>
        <field name="model">purchase.type</field>
        <field name="arch" type="xml">
   	    <form string="Purchase Order Type">
		<sheet>
                <group>
		   <group>
                      <field name="purchase_order_type"></field> 
		   </group>
		   <group>
                      <field name="partner_ref"></field> 
		   </group>
		   <group>
                      <field name="payment_term_id"></field> 
                      <field name="incoterm_id"></field> 
		   </group>
                </group>
		</sheet>
            </form>
        </field>
    </record> 

   <record id="open_purchase_type_tree" model="ir.actions.act_window">
        <field name="name">Purchase order types</field>
        <field name="res_model">purchase.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_purchase_type_tree"/>	
    </record> 

    <menuitem
        id="menu_purchase_order_type"
        name="Purchase Order Type"
        parent="purchase.menu_purchase_config"
	action="open_purchase_type_tree"/>

</odoo>
