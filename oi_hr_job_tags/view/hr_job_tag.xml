<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_hr_job_tag_form" model="ir.ui.view">
		<field name="name">hr.job.tag.form</field>
		<field name="model">hr.job.tag</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
							<field name="active" widget="boolean_button" options='{"terminology": "active"}' />
						</button>
					</div>
					<group>
						<field name="name" />						
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_hr_job_tag_tree" model="ir.ui.view">
		<field name="name">hr.job.tag.tree</field>
		<field name="model">hr.job.tag</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
			</tree>
		</field>
	</record>

	<record id="view_hr_job_tag_search" model="ir.ui.view">
		<field name="name">hr.job.tag.search</field>
		<field name="model">hr.job.tag</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<filter name="Inactive" string="Inactive" domain="[('active','=',False)]" />
				<filter name="active" string="Active" domain="[('active','=',True)]" />
			</search>
		</field>
	</record>

</odoo>