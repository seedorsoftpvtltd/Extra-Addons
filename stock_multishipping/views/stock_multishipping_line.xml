<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_multishipping_line_search_form_view" model="ir.ui.view">
        <field name="name">stock.multishipping.line.search.form</field>
        <field name="model">stock.multishipping.line</field>
        <field name="arch" type="xml">
            <search string="Products">
                <field name="name"/>
                <field name="x_product_id"/>
            </search>
        </field>
    </record>

    <act_window
            id="action_open_single_stock_multishipping_line"
            name="Multishipping"
            res_model="stock.multishipping"
            view_mode="form,tree"
            target="current"/>

    <record id="view_stock_multishipping_line_form" model="ir.ui.view">
        <field name="name">stock.multishipping.line.form</field>
        <field name="model">stock.multishipping.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Multishipping Line" nolabel="1"/></h1>
                    </div>
                    <group>
                        <field name="x_product_id" widget="many2one"/>
                        <field name="x_quantity"/>
                        <field name="x_remaining_stock"/>
                        <field name="x_total_stock"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stock_multishipping_line_tree" model="ir.ui.view">
        <field name="name">stock.multishipping.line.tree</field>
        <field name="model">stock.multishipping.line</field>
        <field name="arch" type="xml">
            <tree string="stock.multishipping">
                <field name="name"/>
                <field name="x_product_id"/>
                <field name="x_quantity"/>
                <field name="x_remaining_stock"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_multishipping_line">
        <field name="name">stock Multishipping</field>
        <field name="res_model">stock.multishipping.line</field>
        <field name="view_mode">form,tree</field>
    </record>

