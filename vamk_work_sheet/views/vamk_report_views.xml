<odoo>
    <data>

<record id="paperformat_A4_worksheet" model="report.paperformat">
            <field name="name">Work sheet A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <report id="report_vamk_wrk_sheet"
                model="mrp.wrkreport"
                string="Work Sheet Report"
                name="vamk_work_sheet.print_vamk_worksheet_report_template"
                file="vamk_work_sheet.print_vamk_worksheet_report_template"
                paperformat="paperformat_A4_worksheet"
                report_type="qweb-pdf"
                menu="False"                
        />
    </data>
</odoo>
