<odoo>
    <data>
        <record model="ir.ui.view" id="vamk_work_sheet_form">
            <field name="name">vamk.work.sheet.form</field>
            <field name="model">mrp.wrkreport</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="from_date" attrs="{'required': [('batch_no', '=', False)]}"/>
                        <field name="to_date" attrs="{'required': [('batch_no', '=', False)]}"/>
                        <field name="batch_no" attrs="{'required': [('from_date', '=', False)]}"/>
                    </group>
                    <footer>
                        <button name="print_report" class="btn-primary" string="Print" type="object"/>
                        <button string="Close" special="cancel" class="highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="vamk_work_sheet_mrp_form">
            <field name="name">vamk.work.sheet.mrp.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='routing_id']" position="after">
                      <field name="wfm1_ou" placeholder="O.U" class="o_address_city"/>
                      <field name="wfm1_cu" class="o_address_state" placeholder="C.U"/>
                      <field name="wfm2_ou" placeholder="O.U" class="o_address_city"/>
                      <field name="wfm2_cu" class="o_address_state" placeholder="C.U"/>                                                              
                      <field name="power_ou" placeholder="O.U" class="o_address_city"/>
                      <field name="power_cu" class="o_address_state" placeholder="C.U"/>                            
              </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="vamk_work_sheet_production_request_form">
            <field name="name">vamk.work.sheet.mrp.request.form</field>
            <field name="model">mrp.production.request</field>
            <field name="inherit_id" ref="mrp_production_request.view_mrp_production_request_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='bom_id']" position="after">
                      <field name="tea_time" widget="float_time"/>
                      <field name="lunch_time" widget="float_time"/>
                      <field name="tea_time2" widget="float_time"/>
              </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="vamk_work_sheet_wo_form">
            <field name="name">vamk.work.sheet.wo.form</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
            <field name="arch" type="xml">
              <xpath expr="/form/sheet/group" position="inside">
                     <group attrs="{'invisible':[('center_code','!=','FlG')]}">
                      <field name="center_code" invisible="1"/>
                      <field name="bottle_feeder"/>
                      <field name="filler"/>
                      <field name="cap_feeder"/>                                                              
                      <field name="capper"/>
                      <field name="cool_feeder"/>
                     </group>                            
              </xpath>
			  <xpath expr="//field[@name='total_workers']" position="after">
			   <field name="labour_ids" widget="many2many_tags"/>
			  </xpath>
              <xpath expr="/form/sheet/group" position="inside">
                     <group attrs="{'invisible':[('center_code','!=','BC')]}">
                      <field name="check_by"/>
                      <field name="dirt_bottle"/>
                      <field name="insect_bottle"/>
                      <field name="damaged_bottle"/>                                                              
                      <field name="total_b"/>
                     </group>                            
              </xpath>

              <xpath expr="/form/sheet/group" position="inside">
                     <group attrs="{'invisible':[('center_code','!=','PCKG')]}">
                      <field name="number_crates"/>
                      <field name="bottle_unpack"/>                                                              
                      <field name="lab_sample"/>
                     </group>                            
              </xpath>
            </field>
        </record>

    <record id="product_vamk_worksheet_inh" model="ir.ui.view">
        <field name="name">product.vamk.worksheet.inh</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/div[@name='options']" position="inside">
                            <div>
                                <field name="is_material"/>
                                <label for="is_material"/>
                            </div>
            </xpath>
        </field>
    </record>

        <record model="ir.actions.act_window" id="vamk_wrkreport_report_action_window">
            <field name="name">Work Sheet Report</field>
            <field name="res_model">mrp.wrkreport</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_vamk_work_sheet_report" name="Work Sheet Report"
                  parent="mrp.menu_mrp_reporting" action="vamk_wrkreport_report_action_window"
                  sequence="1"/>

    </data>
</odoo>
