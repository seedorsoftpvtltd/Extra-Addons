<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Set minimum hour in company-->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <separator string="Employee Workload" col="2" colspan="2"/>
                    <field name="minimum_workload_hours"/>
                    <field name="days_for_workload"/>
                </field>
            </field>
        </record>

        <!-- Follow workload notification-->
        <record id="view_users_form_workload" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tz']" position="after">
                    <field name="is_workload_follower"/>
                </xpath>
            </field>
        </record>

        <!-- Employee wokload-->
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <div class="badge mb8">
                        <field name="workload" class="oe_inline"/>/<field name="company_minimum_workload_hours" class="oe_inline"/> Hours for Next <field name="company_days_for_workload" class="oe_inline"/> Days
                    </div>
                </xpath>
            </field>
        </record>

        <record id="hr_kanban_view_employees" model="ir.ui.view">
            <field name="name">hr.employee.kanban</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <field name="hr_presence_state" position="after">
                    <field name="workload"/>
                    <field name="company_minimum_workload_hours"/>
                    <field name="user_id"/>
                </field>

                <xpath expr="//li[@id='last_login']" position="after">
                    <li t-if="record.user_id.raw_value" t-att-class="record.workload.raw_value&lt;=record.company_minimum_workload_hours.raw_value?'badge normal_load':'badge over_load'"><field name="workload" class="oe_inline"/>/<field name="company_minimum_workload_hours" class="oe_inline"/> Hours for Next <field name="company_days_for_workload" class="oe_inline"/> Days</li>
                    
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>
