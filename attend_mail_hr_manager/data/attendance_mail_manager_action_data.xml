<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <report id="attendance_mail_report_manager_id"
        model="hr.employee"
        string="Attendance Manager Report"
        report_type="qweb-pdf"
        name="attend_mail_hr_manager.attend_report_name_xml_manager_inhs"
        file="attend_report_manager_file"
        menu="False"/>



<template id="attend_report_name_xml_manager_inhs">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
            <!--    <t t-foreach="o.damage_type_ids" t-as="line"> -->
                <t t-call="web.external_layout">
                <div>
                   <div class="page">
                       <center><h2>Attendance Manager Reminder</h2></center>


                        <t t-set="vamk_day" t-value="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                        <span>Attendance Date:</span><span t-esc="vamk_day"/><br/>


                       <table t-if="o.manager_recsfd(o.id)" class="table table-condensed" style="border: 1px solid black;">
                       <thead>
                            <tr style="border: 1px solid black;">
                                   <th style="border-right: 1px solid black;">Employee Name</th>
                                   <th style="border-right: 1px solid black;">Check-in</th>
                                   <th style="border-right: 1px solid black;">Check-out</th>
                            </tr>
                       </thead>
                            <tbody>
                            <tr t-foreach="o.manager_recsfd(o.id)" t-as="os" style="border: 1px solid black;">
                                     <t t-set="vamk_day" t-value="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>

	                                   <td style="border-right: 1px solid black;">  <span t-esc="os['name']"/></td>
	                                   <td style="border-right: 1px solid black;">  <span t-esc="os['check_in']"/></td>
	                                   <td style="border-right: 1px solid black;">  <span t-esc="os['check_out']"/></td>

                            </tr>
                           </tbody>
                       </table>


                   </div>
                </div>

                </t>
            </t>
        </t>
        </template>

    </data>
</odoo>