<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_partner_extend" model="ir.ui.view">
            <field name="name">view.move.form.partner.extend</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="before">
                    <field name="account_types" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'column_invisible': [('parent.type', '!=', 'entry')],'required': [('parent.type', '=', 'entry'),'|', ('account_types', '=', 'receivable'), ('account_types', '=', 'payable')]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>