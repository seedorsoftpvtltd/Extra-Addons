	<template id="internal_layout_custom_invoice_proforma">
			<t t-if="not o" t-set="o" t-value="doc" />

			<t t-if="not company">
				<!-- Multicompany -->
				<t t-if="company_id">
					<t t-set="company" t-value="company_id" />
				</t>
				<t t-elif="o and 'company_id' in o">
					<t t-set="company" t-value="o.company_id.sudo()" />
				</t>
				<t t-else="else">
					<t t-set="company" t-value="res_company" />
				</t>
			</t>

			<div class="header">
			<div class="text-center">								
					<img t-if="company.logos_2"
						t-att-src="image_data_uri(company.logos_2)" 
						alt="Logo"
						style="width:890px;heigth:10px;" />																																	
			</div>
        </div>

			<div class="article">
				<t t-raw="0" />
			</div>

