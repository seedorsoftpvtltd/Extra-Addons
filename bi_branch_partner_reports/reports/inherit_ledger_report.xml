<odoo>
    <data>
        <template id="bi_branch_partner_reports_ledger_inherit" inherit_id="account_dynamic_reports.partner_ledger">
            <xpath expr="//h3" position="after">
                <div class="container">
                    <div class="row mt32 mb32" id="partner_header">
                        <div style="width:25%;">
                            <strong>Company:</strong>
                            <p t-esc="res_company.name"/>
                        </div>
                        <div style="width:25%;">
                            <t t-if="Filters['date_from']">
                                <strong>Date from :</strong>
                                <span t-esc="Filters['date_from']"/>
                                <br/>
                            </t>
                            <t t-if="Filters['date_to']">
                                <strong>Date to :</strong>
                                <span t-esc="Filters['date_to']"/>
                            </t>
                        </div>
                        <div style="width:25%;">
                            <strong>Target Moves:</strong>
                            <p t-if="Filters['target_moves'] == 'all'">All Entries</p>
                            <p t-if="Filters['target_moves'] == 'posted'">All Posted Entries</p>
                        </div>
<!--                        <div style="width:25%;">-->
<!--                            <strong>Branch:</strong><br/>-->
<!--                            <p t-esc="', '.join([ lt or '' for lt in Filters['branch_ids.name'] ])"/>-->
<!--                            <p t-esc="Filters['branch_ids']"/>-->
<!--                        </div>-->
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
