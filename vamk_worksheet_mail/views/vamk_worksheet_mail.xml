<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_autovamk_worksheet_mail" model="ir.cron">
        <field name="name">worksheet mail for admin vamk</field>
        <field name="model_id" ref="base.model_res_company"/>
        <field name="state">code</field>
        <field name="code">model._send_mail_admin()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="vamk_worksheet_email_inh" model="ir.ui.view">
        <field name="name">vamk.worksheet.email.inh</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                   <field name="worksheet_mail"/>
            </xpath>
        </field>
    </record>
</odoo>

