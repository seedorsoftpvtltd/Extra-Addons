<odoo>
    <data noupdate="1">

        <record id="group_gate_pass_user" model="res.groups">
            <field name="name">Gate/Security User</field>
        </record>

        <record id="group_gate_pass_manager" model="res.groups">
            <field name="name">Gate/Security Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_gate_pass_user'))]"/>
        </record>

        <record id="visitor_gate_pass_user_rule" model="ir.rule">
            <field name="name">Employee - Gate User</field>
            <field name="model_id" ref="model_visitor_gate_pass_custom"/>
            <field name="groups" eval="[(4,ref('group_gate_pass_user'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record id="fleet_repair_manager_rule" model="ir.rule">
            <field name="name">Employee - Gate Manager</field>
            <field ref="model_visitor_gate_pass_custom" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_gate_pass_manager'))]"/>
        </record>
        
        <record model="ir.rule" id="visitor_gate_pass_multi_company_rule">
                <field name="name">Gate Visitor multi-company</field>
                <field name="model_id" ref="model_visitor_gate_pass_custom"/>
                <field name="global" eval="True"/>
                <field name="domain_force">['|',('gate_company_id','=',False),('gate_company_id', 'in', company_ids)]</field>
            </record>
    </data>
</odoo>
