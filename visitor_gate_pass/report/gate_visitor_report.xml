<odoo>
    <data>
        <report
            id="gate_visitor_pass_report"
            model="visitor.gate.pass.custom"
            string="Gate Visitor Report"
            name="visitor_gate_pass.gate_visitor_report_view" 
            file="visitor_gate_pass.gate_visitor_report_view"
            report_type="qweb-pdf" />

        <template id="gate_visitor_report_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <div class="well">
                            <h1 class="text-center">Gate Pass</h1>
                            <p><h2><span t-field="doc.gate_name"/></h2></p><br/>
                            <table class="table .table-striped">
                                    <tr>
                                        <td colspan="4"><h4><b>Gate Pass Information</b></h4></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Visitor Name</strong></td>
                                        <td><span t-field="doc.gate_visitor_name"/></td>
                                        <td><strong>Visitor Company</strong></td>
                                        <td><span t-field="doc.gate_visitor_company_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone/Mobile</strong></td>
                                        <td><span t-field="doc.gate_mobile_number"/></td>
                                        <td><strong>Email</strong></td>
                                        <td><span t-field="doc.gate_email"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Purpose</strong></td>
                                        <td colspan="3"><span t-field="doc.gate_purpose"/></td>
                                    </tr>
                                    </table>
                                    <table class="table .table-striped">
                                    <tr>
                                        <td colspan="2"><h4><b>In Out Detail</b></h4></td>
                                        <td colspan="2"><h4><b>Contact Information</b></h4></td>
                                    </tr>
                                        <tr>
                                        <td><strong>Date Time In</strong></td>
                                        <td><span t-field="doc.gate_in_datetime"/></td>
                                        <td><strong>Employee</strong></td>
                                        <td><span t-field="doc.gate_partner_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date Time Out</strong></td>
                                        <td><span t-field="doc.gate_out_datetime"/></td>
                                        <td><strong>Department</strong></td>
                                        <td><span t-field="doc.gate_department_id"/></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td><strong>Created By</strong></td>
                                        <td><span t-field="doc.gate_user_id"/></td>
                                    </tr>
                                </table>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="text-lest">
                                                <p><strong>Date :</strong>____/_____/______</p>
                                                <p><strong>Employee Signature :</strong>___________</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-right" style="margin-right: 10%;">
                                                <p><strong>Date :</strong>____/_____/______</p>
                                                <p><strong>Security Signature :</strong>___________</p>
                                        </div>
                                    </div>
                                </div><br/>
                                <div class="row">
                                    <div class="col-4">
                                    </div>
                                    <t t-if="not doc.gate_out_datetime">
                                        <div class="col-12 text-center" align="center" style="color: #0A9928;
    border: 0.5rem solid #0A9928;
    -webkit-mask-position: 13rem 6rem;
    transform: rotate(-14deg);
  border-radius: 0;
  width:350px;font-size: 3rem;
    font-weight: 700;padding: 0.25rem 1rem;
    text-transform: uppercase;
    font-family: 'Courier';
    -webkit-mask-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/8399/grunge.png');
  -webkit-mask-size: 944px 604px;
  mix-blend-mode: multiply;">
                                            <span>Check In</span>
                                        </div>
                                    </t>
                                    <t t-if="doc.gate_out_datetime">
                                        <div class="col-12 text-center" align="center" style="color: #357EC7;
    border: 0.5rem solid #357EC7;
    -webkit-mask-position: 13rem 6rem;
    transform: rotate(-14deg);
  border-radius: 0;
  width:350px;font-size: 3rem;
    font-weight: 700;padding: 0.25rem 1rem;
    text-transform: uppercase;
    font-family: 'Courier';
    -webkit-mask-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/8399/grunge.png');
  -webkit-mask-size: 944px 604px;
  mix-blend-mode: multiply;">
                                            <span>Check Out</span>
                                        </div>
                                    </t>

                                    <!-- <div class="col-4">
                                    </div> -->
                                </div>
                            </div>
                       </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
