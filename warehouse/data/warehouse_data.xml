<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- warehouse-related subtypes for messaging / Chatter -->
        <record id="mt_Booking_confirmed" model="mail.message.subtype">
            <field name="name">Booking Confirmed</field>
            <field name="default" eval="False"/>
            <field name="res_model">warehouse.order</field>
        </record>
        <record id="mt_Booking_approved" model="mail.message.subtype">
            <field name="name">Booking Approved</field>
            <field name="default" eval="False"/>
            <field name="res_model">warehouse.order</field>
        </record>
        <record id="mt_Booking_done" model="mail.message.subtype">
            <field name="name">Booking Done</field>
            <field name="default" eval="False"/>
            <field name="res_model">warehouse.order</field>
        </record>

        <!-- Sequences for warehouse.order -->
        <record id="seq_warehouse_order" model="ir.sequence">
            <field name="name">Warehouse Booking</field>
            <field name="code">warehouse.order</field>
            <field name="prefix">W</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Share Button in action menu -->
        <record id="model_warehouse_order_action_share" model="ir.actions.server">
            <field name="name">Share</field>
            <field name="model_id" ref="warehouse.model_warehouse_order"/>
            <field name="binding_model_id" ref="warehouse.model_warehouse_order"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">action = records.action_share()</field>
        </record>
    </data>
</odoo>
