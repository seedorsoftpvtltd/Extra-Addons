<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Quick Timesheets Manager -->
        <record id="rule_quick_timesheet_manager" model="ir.rule">
            <field name="name">Quick Timesheets Manager</field>
            <field name="model_id" ref="model_quick_timesheet_sheet" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_timesheet_manager'))]"/>
        </record>
        
        <!--Quick Timesheets User -->
        <record id="rule_quick_timesheet_user" model="ir.rule">
            <field name="name">Quick Timesheets User</field>
            <field name="model_id" ref="model_quick_timesheet_sheet" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>
        
        <!--Quick Timesheets Employee -->
        <record id="rule_quick_timesheet_employee" model="ir.rule">
            <field name="name">Quick Timesheets Employee</field>
            <field name="model_id" ref="model_quick_timesheet_sheet" />
            <field name="domain_force">[('employee_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record model="ir.rule" id="custom_quick_timesheet_sheet_rule_comp_probc">
            <field name="name">Quick Timesheet multi-company</field>
            <field name="model_id" ref="model_quick_timesheet_sheet"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
