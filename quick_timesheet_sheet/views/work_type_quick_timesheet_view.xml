<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="work_type_quick_timesheet_form_view">
        <field name="name">work.type.quick_timesheet form</field>
        <field name="model">work.type.quick_timesheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
<!--                            <field name="timesheet_type"/-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="work_type_quick_timesheet_kanban_view" model="ir.ui.view">
        <field name="name">work.type.quick_timesheet kanban</field>
        <field name="model">work.type.quick_timesheet</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details d-flex flex-column">
                                <ul>
                                    <field name="name" />
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record model="ir.ui.view" id="work_type_quick_timesheet_tree_view">
        <field name="name">work.type.quick_timesheet tree</field>
        <field name="model">work.type.quick_timesheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
<!--                <field name="timesheet_type"/-->
            </tree>
        </field>
    </record>
    
    <record id="work_type_quick_timesheet_sheet" model="ir.actions.act_window">
        <field name="name">Work Types</field>
        <field name="res_model">work.type.quick_timesheet</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
