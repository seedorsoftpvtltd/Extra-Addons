<?xml version="1.0"?>
<odoo>
    <data>
        <record id="hr_timesheet_line_form_timesheet_type" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit.timesheet_type Form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
            <field name="arch" type="xml">

                <xpath expr = "//field[@name='unit_amount']" position="after">
                    <field name="work_type_id" />
                    <field name="is_timesheet_id" invisible="1"/>
                    <field name="quick_timesheet_id" invisible="True"/>
                </xpath>
                <xpath expr = "//field[@name='date_time']" position="attributes">

                    <attribute name="attrs">{'invisible': [('is_timesheet_id','=',True)]}</attribute>

                </xpath>
                <xpath expr = "//field[@name='date_time_end']" position="attributes">

                    <attribute name="attrs">{'invisible': [('is_timesheet_id','=',True)]}</attribute>

                </xpath>
            </field>
        </record>
        
        <record id="hr_timesheet_line_tree_inherit_timesheet_type" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit.timesheet_type Form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='task_id']" position="after">
                    <field name="work_type_id" />


                </xpath>

            </field>
        </record>

