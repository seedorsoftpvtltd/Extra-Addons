                                <div class="col-6">
                                    <p>
                                        <strong>Status:</strong>
                                        <span t-field="doc.state"/>
                                    </p>
                                </div>
                                <div class="col-6">
                                </div>
                            </div>
                            <table class="table table-bordered" style="table-layout: fixed; page-break-inside:auto"
                                width="100%">
                                <thead style="display:table-header-group">
                                    <tr style="page-break-inside:avoid; page-break-after:auto">
                                        <th>
                                        </th>
                                        <th>
                                            <span t-field="doc.label_day1"/>
                                        </th>
