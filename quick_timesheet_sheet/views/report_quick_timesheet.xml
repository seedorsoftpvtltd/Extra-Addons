<openerp>
    <data>
         <!-- QWeb Reports -->
        <report 
            id="quick_timesheet_report"
            model="quick.timesheet.sheet"
            menu="True"
            report_type="qweb-pdf"
            string="Timesheet Sheet"
            name="quick_timesheet_sheet.quick_timesheet_report_template"
            file="quick_timesheet_sheet.quick_timesheet_report_template"
           />
        
        <template id="quick_timesheet_report_template">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <t t-call="web.html_container">
