<?xml version="1.0"?>
<odoo>
     <record id="view_update_invoice_inh" model="ir.ui.view">
		<field name="name">freight.operation.inh</field>
		<field name="model">freight.operation</field>
		<field name="inherit_id" ref="scs_freight.view_freight_operation_form"/>
		<field name="arch" type="xml">
            <xpath expr="//button[@name='action_revoke']" position="replace">
                 <button
                        name="revoke_update_latest.action_update_invoice11"
                         type="action"
                        string="Revoke"
                        attrs="{'invisible': [('state', 'in', ['draft', 'cancel'])]}"
                        class="oe_highlight"
                        groups="revoke_update_button_job.group_update_revoke"
                    />
             </xpath>

        </field>
    </record>
     <record id="view_update_invoice_form" model="ir.ui.view">
        <field name="model">update.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Revoke">
                <group string="Invoice">

                     <field name="service_ids" nolabel="1" readonly="0">
                                <tree editable="bottom" create="0" delete="false">
                                        <field name="customer_id" string="Customer" />
                                     <field name="invoice_id"/>
                                    <field name="product_id" string="Service" />

                                    <field name="qty" />
                                    <field name="list_price" string="Sale Price"/>

                                    <field name="revoke_invoice" string="Revoke Invoice"/>
                                </tree>
                            </field>

                </group>
                <group string="Bill">

                     <field name="service_bill_ids" nolabel="1" readonly="0">
                                <tree editable="bottom" create="0" delete="false">
                                    <field name="vendor_id" string="Vendor" />
                                    <field name="bill_id"/>
                                    <field name="product_id" string="Service" />
                                    <field name="qty" />
                                    <field name="cost_price" string="Cost Price" />
                                    <field name="revoke_bill" force_save="True" string="Revoke Bill"/>
                                </tree>
                            </field>

                </group>

                <footer>
                    <button name="revoke_inv" string="Revoke" class="btn-primary" type="object"/>



                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_invoice11" model="ir.actions.act_window">
        <field name="name">Revoke</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_update_invoice_form"/>
        <field name="target">new</field>
<!--          <field name="context">{'default_service_ids': active_ids}</field>-->
    </record>
</odoo>
