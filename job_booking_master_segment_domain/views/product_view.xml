<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit product.product form view -->
    <record id="segment_product_normal_form_view" model="ir.ui.view">
        <field name="name">segment.product.normal.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]//group[1]" position="inside">
                <field name="seg_domain" invisible="1"/>
                <group string="Master" attrs="{'invisible':[('seg_domain','=',False)]}">
                    <field name="x_segment"/>
                    <field name="x_transport"/>
                    <field name="x_land_shipping" string="Service Type" attrs="{'invisible': [('x_transport', '!=', 'land')]}"/>
                      <field name="x_ocean_shipping" string="Service Type" attrs="{'invisible': [('x_transport', '!=', 'ocean')]}"/>
                      <field name="x_air_shipping" string="Service Type" attrs="{'invisible': [('x_transport', '!=', 'air')]}"/>
                      <field name="x_warehouse" string="Service Type" attrs="{'invisible': [('x_transport', '!=', 'not_required')]}"/>
                </group>

            </xpath>
            <xpath expr="//page[1]//field[@name='type']" position="before">
                    <field name="x_medium"/>
                </xpath>
        </field>
    </record>
</odoo>