<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="custome_wizard" model="ir.ui.view">
        <field name="name">customer.supplier.wizard.form</field>
        <field name="model">customer.supplier.wizard</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <field name="start_date"/>
                     <field name="end_date"/>


                </group>
                <footer>
                    <button string="PDF" type="object" name="print_pdf" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

        <record id="supplier_wizard" model="ir.ui.view">
        <field name="name">supplier.wizard.form</field>
        <field name="model">supplier.wizard</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <field name="start_date"/>
                     <field name="end_date"/>


                </group>
                <footer>
                    <button string="PDF" type="object" name="print_pdf_supplier" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

       <record id="action_statement_cust" model="ir.actions.act_window">
            <field name="name">Report</field>
            <field name="res_model">customer.supplier.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="customer_supplier_wizard.custome_wizard"/>
            <field name="target">new</field>
        </record>

        <record id="action_statement_supp" model="ir.actions.act_window">
            <field name="name">Report</field>
            <field name="res_model">supplier.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="customer_supplier_wizard.supplier_wizard"/>
            <field name="target">new</field>
        </record>


        <record id="customer_supplier_extend" model="ir.ui.view">
            <field name="name">customer_supplier_extend_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//form/sheet/notebook/page[@name='accounting']" position="after">
                      <page string="Customer / Vendor Reports">
                          <button name="%(action_statement_cust)d" string="Print Report" type="action"/>
                          <button name="%(action_statement_supp)d" string="Supplier Statement" type="action" invisible="1"/>
                      </page>
                </xpath>

            </field>

        </record>
    </data>
</odoo>


