<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_data_reminder" model="ir.cron">
        <field name="name">HR Employee Data Expiration</field>
        <field name="model_id" ref="model_hr_employee_documents"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record model='ir.ui.view' id='employee_documents_form_view'>
        <field name="name">hr.employee.documents.form</field>
        <field name="model">hr.employee.documents</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document_name"/>
                            <field name="doc_attachment_ids" widget="many2many_binary" class="oe_inline"/>
                            <field name="employee_ref" invisible="1"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='employee_documents_tree_view'>
        <field name="name">hr.employee.documents.tree</field>
        <field name="model">hr.employee.documents</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='employee_documents_kanban_view'>
        <field name="name">hr.employee.documents.kanban</field>
        <field name="model">hr.employee.documents</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban">
                <field name="name"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <templates>
                                  <t t-name="kanban-box">
                                     <div class="oe_kanban_global_click_kanban">
                                         <div class="document_kanban">
                                           <strong class="o_kanban_record_title oe_partner_heading">
                                               <field name="name"/>
                                           </strong>
                                         </div>
                                         <div>
                                             <span>Document Type:  </span>
                                             <field name="issue_date"/>

                                         </div>
                                         <div>
                                             <span>Expiry date:  </span>
                                             <field name="expiry_date"/>
                                         </div>

                                    </div>

                                  </t>
                       </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_documents_inherit_form_view">
        <field name="name">hr.employee.documents.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view1" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count1" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <record id="hr_employee_documents_action" model="ir.actions.act_window">
        <field name="name">Employee Documents</field>
        <field name="res_model">hr.employee.documents</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="employee_documents_tree_view"/>
        <field name="context">{'search_default_Employee': 1}</field>
    </record>

    <menuitem id="employe_document_menuitem"
              name="Employee Doc"
              parent="hr.menu_hr_employee_payroll"
              action="employee_documents_expiry.hr_employee_documents_action"
              groups="hr.group_hr_manager" />

</odoo>
