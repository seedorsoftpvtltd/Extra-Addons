<?xml version="1.0" encoding="UTF-8" ?>
<odoo>



        <record id="absent_report_wizard_form" model="ir.ui.view">
        <field name="name">absent.report.form</field>
        <field name="model">absent.report</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <field name="start_date"/>
<!--                     <field name="end_date"/>-->
                     <field name="department_id" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                     <field name="company_id" readonly="1" invisible="1"/>

                </group>
                <footer>
                    <button string="PDF" type="object" name="print_pdf" class="btn-primary"/>
<!--                     <button string="Excel" type="object" name="print_excel" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

       <record id="action_absent_report" model="ir.actions.act_window">
    <field name="name">Daily Absence Report</field>
    <field name="res_model">absent.report</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="absent_attendance_report.absent_report_wizard_form"/>
    <field name="target">new</field>
    </record>

    <menuitem
        id="menu_report_attendance"
        name="Daily Absence Report"
        parent="hr_attendance.menu_hr_attendance_report"
        action="action_absent_report"
        sequence="15"
    />
</odoo>