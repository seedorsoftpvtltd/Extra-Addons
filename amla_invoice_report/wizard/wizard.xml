<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="report_wizard_form_view">
    <field name="name">Report Wizard</field>
    <field name="model">report.wizard</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="start_date" string="Start Date"/>
               <field name="end_date" string="End Date"/>
                <!--field name="old_bill"/-->
            </group>

        <footer>
<!--            <button name="view" string="View" type="object" class="btn btn-primary"/><t>OR</t>-->
             <button name="excel" string="Print XLSX" icon="fa-print" type="object" class="btn btn-primary"/><t>OR</t>
             <button name="pdf" string="print PDF" type="object" icon="fa-print" class="btn btn-primary"/>
        </footer>
         </form>
    </field>
</record>



    <act_window id="report_view_action"
                name="Collection Report"
                res_model="report.wizard"
                view_mode="form"
                target="new"/>

        <menuitem
           action="report_view_action"
           id="action_report_view_action"
           parent="account.menu_finance_reports"
           sequence="1"/>



</odoo>
