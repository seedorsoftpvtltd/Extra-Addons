<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <template id="report_pdf">
            <t t-call="web.html_container">

             <t t-call="web.external_layout">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang) if doc else None"/>
                    <div class="page">
                        <div style="margin-left:-5px;">
                            <img t-if="doc and doc.company_id.favicon" t-att-src="image_data_uri(doc.company_id.favicon)" alt="Logo" style="width:844px;heigth:50px;"/>
                        </div>

                      <t t-set="current_date" t-value="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                      <center><span><h1>Collection Report</h1></span><br/></center>
                         <table class="table table-bordered table-condensed" style="border: 1px solid #000;">
                      <t t-set="counter" t-value="0"/>
                               <tbody>
                        <tr>
                            <th style="text-align: center;color: #000;text-color: #000;">GST IN</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Party Name</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Bill Number</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Date</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Quantity</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Net Amount</th>
                            <th style="text-align: center;color: #000;text-color: #000;">SGST</th>
                            <th style="text-align: center;color: #000;text-color: #000;">CGST</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Total Amount</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Paid</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Bank</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Credit</th>

                        </tr>

                              <tr t-foreach="invoice" t-as="line">
                                  <tr t-foreach="line" t-as="lines">


                                     <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.x_gstin"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.partner_id"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.name"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.invoice_date"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.tot_qty"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.amount_untaxed"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.x_sgst1"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.x_cgst1"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.amount_total"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.paid"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.bank"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines.amount_residual"/></td>

                               </tr>
                              </tr>



                            </tbody>
                        </table>

                      <center><span><h1>Old Bills</h1></span><br/></center>
                         <table class="table table-bordered table-condensed" style="border: 1px solid #000;">
                      <t t-set="counter" t-value="0"/>
                               <tbody>
                        <tr>
                            <th style="text-align: center;color: #000;text-color: #000;">GST IN</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Party Name</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Bill Number</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Date</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Quantity</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Net Amount</th>
                            <th style="text-align: center;color: #000;text-color: #000;">SGST</th>
                            <th style="text-align: center;color: #000;text-color: #000;">CGST</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Total Amount</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Paid</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Bank</th>
                            <th style="text-align: center;color: #000;text-color: #000;">Credit</th>

                        </tr>

                             <tr t-foreach="invoice1" t-as="line1">
                                  <tr t-foreach="line1" t-as="lines1">


                                     <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.x_gstin"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.partner_id"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.name"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.invoice_date"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.tot_qty"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.amount_untaxed"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.x_sgst1"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.x_cgst1"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.amount_total"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.paid"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.bank"/></td>
                                      <td style="height:5px;text-align: center;color: #000;text-color: #000"><span t-field="lines1.amount_residual"/></td>

                               </tr>
                              </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
              </t>

        </template>
    </data>

</odoo>
