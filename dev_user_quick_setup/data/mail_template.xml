<odoo>
    <!--Email template -->
    <record id="approve_user_setup_id" model="mail.template">
        <field name="name">Approve User Setup</field>
        <field name="email_from">${object.u_company_id and object.u_company_id.email or ''}</field>
        <field name="subject">Approve New User Setup</field>
        <field name="model_id" ref="dev_user_quick_setup.model_user_quick_setup"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[

                   <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF;">
                   
                 % set setup_url = object.make_url()
                <p>Hello Sir <b></p>

                <p>Please approve new user setup</p>
                
                 <p>Click on below button to access it</p>
                <br/>
                <a href="${setup_url}" style="background-color: #1abc9c;padding: 20px;text-decoration: none;color: #fff;border-radius: 5px;font-size: 16px;" class="o_default_snippet_text">View User Setup</a>
                <br/><br/>
           </div>
                ]]></field>
    </record>
</odoo>