<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_payslip_run_form_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.run.form.inherit</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_payslip_run_form"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='credit_note']" position="after">
                    <newline/>
                    <field name="custom_partner_bank_id" options="{'no_create': True, 'no_edit': True}"/>
                    <field name="custom_payment_advice" readonly="True"/>
                </xpath>
                  <xpath expr="//button[@name='draft_payslip_run']" position="after">
                 <!--xpath expr="//button[@name='action_draft']" position="after"-->
                    <button name="create_bank_advice" string="Create Advice" type="object" states="close" />
                 </xpath>
            </data>
            </field>
        </record>


	<record id="view_hr_bank_payroll_advice_kanban" model="ir.ui.view">
            <field name="name">hr.bank.payroll.advice.kanban</field>
            <field name="model">custom.hr.bank.payroll.advice</field>
            <field name="arch" type="xml">
            <kanban  string="Bank Advice">
                    <field name="number"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="bank_id"/>
                    <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details d-flex flex-column">
                                <ul>
                                    <field name="name"/>
                                    <br></br>
                                    <field name="date"/>
                                    <br></br>
                                    <field name="bank_id"/>
                                    <br></br>
                                    <field name="state"/>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
        </record>

        <record id="view_hr_bank_payroll_advice_tree" model="ir.ui.view">
            <field name="name">hr.bank.payroll.advice.tree</field>
            <field name="model">custom.hr.bank.payroll.advice</field>
            <field name="arch" type="xml">
                <tree string="Bank Advice">
                    <field name="date"/>
                    <field name="number"/>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="bank_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_bank_advice_form" model="ir.ui.view">
            <field name="name">hr.bank.payroll.advice.form</field>
            <field name="model">custom.hr.bank.payroll.advice</field>
            <field name="arch" type="xml">
                <form string="Bank Advice">
                    <header>
                        <button name="action_bank_payroll_send" string="Send by Email" states="cancel,confirm" type="object" class="btn btn-primary"/>
                        <button name="confirm_advice_sheet"  string="Confirm Sheet" states="draft" type="object" class="oe_highlight"/>
                        <button name="payment_advice_lines" string="Compute Advice" states="draft" type="object" class="oe_highlight"/>
                        <button name="cancel_advice_sheet" string="Cancel Advice" states="draft"  type="object"/>
                        <button name="set_to_draft" string="Set to Draft" states="cancel,confirm" type="object"/>
                        <div class="oe_right">
                            <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft"/>
                        </div>
                        <div class="oe_clear"/>
                    </header>
                    <sheet>
                            <label for="name" class="oe_edit_only"/>
                            <field name="number"/>
                            <group colspan="2" col="6">
                                <field name="name"/>
                                <field name="date"/>
                            </group>
                            <group colspan="2" col="6">
                                <field name="bank_id"/>
                                <field name="custom_partner_bank_id" domain="[('bank_id','=',bank_id),('partner_id','=',partner_id)]"/>
                            </group>
                            <field name="partner_id" invisible="1"/>
                        <notebook colspan="4">
                            <page string="Payment Lines">
                                <field name="line_ids" colspan="4" nolabel="1">
                                    <tree string="Payment Lines" editable="bottom">
                                        <field name="employee_id"/>
                                        <field name="employee_bank"/>
                                        <field name="name"/>
                                        <field name="ifsc_code" />
                                        <field name="bysal"/>
<!--                                        <field name="debit_credit"/-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Information">
                                <group>
                                <field name="company_id"
                                groups="base.group_multi_company" options="{'no_create': True}"/>
<!--                                <field name="chaque_nos"/-->
                                <newline/>
                                <field name="batch_id"/>
                                </group>
<!--                                <separator colspan="4" string="Letter Details"/>
                                <field name="note" colspan="4" nolabel="1"/>    -->
                            </page>
                        </notebook>
                    </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="view_hr_bank_payroll_advice_filter" model="ir.ui.view">
            <field name="name">hr.bank.payroll.advice.select</field>
            <field name="model">custom.hr.bank.payroll.advice</field>
            <field name="arch" type="xml">
                <search string="Search Payment advice">
                    <group>
                        <filter name="Draft" domain="[('state','=','draft')]" help="Draft Advices"/>
                        <filter name="Confirm" domain="[('state','=','confirm')]" help="Confirm Advices"/>
                        <separator orientation="vertical"/>
                        <field name="date"/>
                        <field name="number"/>
                        <field name="name"/>
                        <field name="bank_id"/>
                        <field name="batch_id"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By">
                        <filter name="bank_id" context="{'group_by':'bank_id'}"/>
                        <separator orientation="vertical"/>
                        <filter name="state" context="{'group_by':'state'}"/>
                        <separator orientation="vertical" />
                        <filter name="company_id" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_view_hr_bank_payroll_advice_tree" model="ir.actions.act_window">
            <field name="name">Payment Advices</field>
            <field name="res_model">custom.hr.bank.payroll.advice</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_hr_bank_payroll_advice_tree"/>
            <field name="search_view_id" ref="view_hr_bank_payroll_advice_filter"/>
        </record>

        <menuitem
            action="action_view_hr_bank_payroll_advice_tree"
            id="hr_menu_payment_advice"
            parent="hr_payroll_community.menu_hr_payroll_community_root"
        />

        <record id="view_advice_line_form" model="ir.ui.view">
            <field name="name">advice.line.form</field>
            <field name="model">custom.hr.bank.payroll.advice.line</field>
            <field name="arch" type="xml">
                <form string="Advice Lines">
                    <sheet>
                    <label for="advice_id" class="oe_edit_only"/>
                    <h1><field name="advice_id"/></h1>
                        <group>
                            <field name="employee_id" />
                            <field name="employee_bank"/>
                            <field name="name" />
                            <field name="ifsc_code"/>
                            <field name="bysal" />
                            <field name="debit_credit" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>
