<?xml version="1.0"?>
<odoo>
<data>
    <record id="wizard_whatsapp_payslip_view" model="ir.ui.view">
            <field name="name">wizard.whatsapp.payslip.form</field>
            <field name="model">wizard.whatsapp.payslip</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Whatsapp Message">
                    <group>

                        <field name="mobile_number" force_save="1" readonly="0"/>
                        <field name="attachment_ids" force_save="1"/>



                    </group>
                    <footer>
                        <button name="send_custom_payslip_message" string="Send" type="object"
                                style="background-color:#7C7BAD;color:#FFFFFF"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>