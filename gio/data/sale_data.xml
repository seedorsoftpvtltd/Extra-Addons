<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Share Button in action menu -->
        <record id="model_goods_issue_order_action_share" model="ir.actions.server">
            <field name="name">Share</field>
            <field name="model_id" ref="gio.model_goods_issue_order"/>
            <field name="binding_model_id" ref="gio.model_goods_issue_order"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">action = records.action_share()</field>
        </record>

        <!-- set default order confirmation template -->
        <record id="default_confirmation_template" model="ir.config_parameter">
            <field name="key">gio.default_confirmation_template</field>
            <field name="value" ref="gio.mail_template_goods_confirmation"/>
        </record>
    </data>
</odoo>
