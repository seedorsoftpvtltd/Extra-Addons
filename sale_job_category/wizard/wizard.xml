<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="Job_sale_Wizard_view" model="ir.ui.view">
            <field name="name">job.sale.wizard.view</field>
            <field name="model">job.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Job Category">
                    <field name="types" widget="radio" options="{'horizontal': true}" domain="[('is_job_category','=', True)]"/>
                    <group>
                    <field name="category" string='Job Category' required="1" widget="radio"
                           domain="[('job_types','=',types)]" options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <footer>
                        <button string="Create Quotation" name="apply_category" type="object" default_focus="1"
                                class="oe_highlight"/>

                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_category_sale_wizard"
                    name="Shortcuts"
                    res_model="job.sale.wizard"
                    view_mode="form"
                    target="new"/>
        <menuitem
                action="action_category_sale_wizard"
                id="wizard_job_category_action"
                web_icon="sale_job_category,static/description/icon_category.png"
                parent="sale.sale_menu_root"
                sequence="8"/>


    </data>

</odoo>
