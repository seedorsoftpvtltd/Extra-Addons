<?xml version="1.0" encoding="utf-8"?>
<odoo>


<data>
<!-- Your List View Definition -->

    <record id="view_saless_order_inherit" model="ir.ui.view">
			<field name="name">sale.order</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='medium_id']" position="before">
                    <field name="category" string="Category"/>

				</xpath>

			</field>
		</record>



        <record id="view_sale_job_category" model="ir.ui.view">
            <field name="name">category.view</field>
            <field name="model">sale.job.category</field>
            <field name="arch" type="xml">
                <tree string="Category">
                    <!-- Add All Fields You Want In The List Here -->

                    <field name="category"/>

                </tree>
            </field>
          </record>

<!-- Your Form View Definition -->
        <record id="view_sale_job_category_form" model="ir.ui.view">
            <field name="name">job_category_form</field>
            <field name="model">sale.job.category</field>
            <field name="arch" type="xml">
                <form string="Category" version="7.0">
                    <sheet>
                            <group>
                    <!-- Add All Fields You Want In The Form Here -->
                      <field name="job_types" string="Job Type" options="{'no_create': True, 'no_create_edit':True}" required="1"/>
                                <field name="freight_direction" string="Segment" required="1"/>
                    <field name="freight_transport" string="Transport" required="1"/>
                    <field name="freight_ocean_shipping" string="Service Type" required="1" attrs="{'invisible': ['|',('freight_transport', '!=', 'ocean'),('freight_direction', '=', 'customs_brokerage')]}"/>
                    <field name="freight_land_shipping" string="Service Type" required="1" attrs="{'invisible': ['|',('freight_transport', '!=', 'land'),('freight_direction', '=', 'customs_brokerage')]}"/>
                    <field name="freight_air_shipping" string="Service Type" required="1" attrs="{'invisible': ['|',('freight_transport', '!=', 'air'),('freight_direction', '=', 'customs_brokerage')]}"/>
                                <field name="x_cb_type" string="Service Type" required="1" attrs="{'invisible': [('freight_direction', '!=', 'customs_brokerage')]}"/>
                    <field name="category" string="Category" force_save="1" readonly="1"/>

                                <field name="department_code"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

<!-- Your Action Window Definition -->
        <record id="sale_job_category_action" model="ir.actions.act_window">
            <field name="name">Job Category</field>
            <field name="res_model">sale.job.category</field>
        <!--    <field name="view_type">form</field>-->
            <field name="view_mode">list,form</field>
        </record>

<!-- Action Menu Item Related To Above Action Window -->
        <menuitem
        action="sale_job_category_action"
        id="action_sale_job_category_action"
        parent="sale.menu_sale_config"

        sequence="1"/>
    </data>

</odoo>






