<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_partner_endingbal_view_extend" model="ir.ui.view">
            <field name="name">res.partner.endingbal.extend</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='payment_amount_due_amt']" position="after">
                     <field name="ending_balance_customer" string="Ending Balance" readonly="1" attrs="{'invisible': ['|','|',('filter_start_date_customer', '!=', False),('filter_end_date_customer', '!=', False)]}"/>
                     <field name="ending_balance_filter_customer" string="Ending Balance" readonly="1" force_save='1' attrs="{'invisible': [('filter_start_date_customer', '=',False),('filter_end_date_customer', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='payment_amount_due_amt_supplier']" position="after">
                     <field name="ending_balance_vendor" string="Ending Balance" readonly="1" attrs="{'invisible': ['|','|',('filter_start_date_vendor', '!=', False),('filter_end_date_vendor', '!=', False)]}"/>
                     <field name="ending_balance_filter_vendor" string="Ending Balance" force_save='1' readonly="1" attrs="{'invisible': [('filter_start_date_vendor', '=',False),('filter_end_date_vendor', '=', False)]}"/>
                </xpath>
            </field>

        </record>
    </data>
</odoo>


