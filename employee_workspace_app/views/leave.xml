<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_leave_action_my_manager" model="ir.actions.act_window">
        <field name="name">Employee Leaves</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave</field>
        <field name="view_mode">tree,form,calendar,kanban,activity</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new leave request
            </p><p>
                Once you have recorded your leave request, it will be sent
                to a manager for validation. Be sure to set the right leave
                type (recuperation, legal leaves, sickness) and the exact
                number of open days related to your leave.
            </p>
        </field>
    </record>

    <menuitem id="menu_leavereq" parent="menu_selfservice" sequence="6" name="Employee Leaves"/>

    <menuitem action="hr_leave_action_my_manager" id="menu_leavereq_manager" parent="menu_leavereq" sequence="10" groups="employee_workspace_app.activity_by_manager" name="All Leaves"/>

    <menuitem action="hr_holidays.hr_leave_action_my" id="menu_leavereq_user" parent="menu_leavereq" sequence="1" name="My Leaves"/>
</odoo>