<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="open_view_project_all" model="ir.actions.act_window">
        <field name="name">Employee Projects</field>
        <field name="res_model">project.project</field>
        <field name="binding_view_types">form</field>
        <field name="domain">[]</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="project.view_project_kanban"/>
        <field name="search_view_id" ref="project.view_project_project_filter"/>
        <field name="target">main</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new project
            </p><p>
                Or <a type="action" name="%(project.ir_actions_server_project_sample)d" tabindex="-1">activate a sample project</a> to play with.
            </p>
        </field>
    </record>
    <menuitem action="open_view_project_all" id="menu_projectcreate" parent="menu_selfservice" sequence="2" />
</odoo>
