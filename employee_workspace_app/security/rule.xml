<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <!-- Schedule Module Category -->
    <record id="employee_workspace_type" model="ir.module.category">
        <field name="description">Model of Workspace</field>
        <field name="name">Workspace</field>
        <field name="sequence">4</field>
    </record>

    <!-- Supervisor Group -->
    <record id="activity_by_supervisor" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="employee_workspace_type"/>
    </record>

   <!-- Manager Group -->
    <record id="activity_by_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="employee_workspace_type"/>
        <field name="implied_ids" eval="[(4, ref('activity_by_supervisor'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.user_root" model="res.users">
        <field name="groups_id" eval="[(4, ref('activity_by_manager'))]"/>
    </record>

    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('activity_by_manager'))]"/>
    </record>

    
    <record id="rule_employee_details_manager" model="ir.rule">
        <field name="name">Employee-Workspace Manager</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('activity_by_manager'))]"/>
    </record>

    <!-- Override Maintenance Request Task Rule -->
<!--    <record id="maintenance.equipment_request_rule_user" model="ir.rule">-->
<!--        <field name="name">Users are allowed to access their own maintenance requests-workspace</field>-->
<!--        <field name="model_id" ref="maintenance.model_maintenance_request"/>-->
<!--        <field name="domain_force">['|', ('message_partner_ids', 'in', [user.partner_id.id]), ('user_id.id', '=', user.id)]</field>-->
<!--        <field name="groups" eval="[(4,ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>-->
<!--    </record>-->

    <!-- Override Existing Attendance Task Rule -->
    <record id="hr_attendance.hr_attendance_rule_attendance_employee" model="ir.rule">
        <field name="name">user: read and modify own attendance only-Workspace</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="groups" eval="[(4,ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>
    </record>

    <!-- Override Existing Project Task Rule -->
    <record model="ir.rule" id="project.task_visibility_rule">
        <field name="name">Project/Task: employees: follow required for follower-only projects-Task-Workspace</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>
    </record>

    <!-- Override Existing Project Project Rule -->
    <record model="ir.rule" id="project.project_public_members_rule">
        <field name="name">Project: employees: following required for follower-only projects-Task-Workspace</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>
    </record>

    <!-- Override Existing Expense Rule -->
    <record id="hr_expense.ir_rule_hr_expense_employee" model="ir.rule">
        <field name="name">Employee Expense Workspace</field>
        <field name="model_id" ref="hr_expense.model_hr_expense"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>
    </record>

    <!-- Override Existing Expense Sheet Rule -->
    <record id="hr_expense.ir_rule_hr_expense_sheet_employee" model="ir.rule">
        <field name="name">Employee Expense Sheet Workspace</field>
        <field name="model_id" ref="hr_expense.model_hr_expense_sheet"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('employee_workspace_app.activity_by_supervisor'))]"/>
    </record>

    <!-- Enable Workspace -->
    <record id="group_allow_workspace" model="res.groups">
        <field name="name">Enable Workspace</field>
    </record>


</odoo>