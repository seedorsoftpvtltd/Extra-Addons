<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_it_solution_contactus" name="Contact Us">
		<section class="It-cotact-us">
			<div class="container extended-container">
				<div class="row align-items-center">
					<div class="col-lg-6 mb-4 mb-lg-0">
						<div class="image">
							<a href="/" target="_blank">
								<img class="img img-fluid"
									src="/theme_vouge_business/static/src/img/solution-contact.png" />
							</a>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="text-content">
							<h2>Contact us</h2>
							<p>Aaboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum.</p>
							<div class="form">
								<form action="/website_form/" method="post" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-name="Form Builder" data-model_name="mail.mail" data-success_page="/thank-you">
									<div class="row mb32">
										<div class="col-lg-6">
											<div class="form-group form-field o_website_form_custom o_website_form_required_custom m-0">
												<input placeholder="Name*"
													name="contact_name" required="True" type="text"
													class="o_website_form_input form-control"/>
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group m-0">
												<div class="form-group form-field o_website_form_required_custom">
									              	<input type="email" placeholder="E-Mail*" class="form-control o_website_form_input" name="email_from" required=""/>
									          	</div>
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group form-field o_website_form_custom o_fake_not_editable">
								              	<input type="text" placeholder="Phone*" class="form-control o_website_form_input" name="Phone Number"/>
								          	</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group form-field o_website_form_required_custom">
								              	<input type="text" placeholder="Subject*" class="form-control o_website_form_input" name="subject" required=""/>
								          	</div>
										</div>
										<div class="col-lg-12">
											<div class="form-group form-field o_website_form_custom o_website_form_required_custom">
								              	<textarea placeholder="Message*" class="form-control o_website_form_input" name="Your Question" required=""></textarea>
								          	</div>
										</div>
										<div class="col-lg-12 mt16 text-center">
											<div class="form-group">
								              	<button class="btn btn-itsolution-2 btn-lg  o_website_form_send o_default_snippet_text">Submit Message</button>
								              	<span id="o_website_form_result"></span>
								          	</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</template>

</odoo>