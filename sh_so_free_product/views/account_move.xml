<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sh_account_move_view" model="ir.ui.view">
			<field name="name">sh.account.move.view</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<field name="company_id" position="after">
					<field name="sh_free_product"/>
				</field>
				<xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="after">
					<field name="sh_unit_price" force_save="1" invisible="1"/>
				</xpath>
				<xpath expr="//field[@name='line_ids']//tree//field[@name='price_unit']" position="after">
					<field name="sh_unit_price" force_save="1" invisible="1"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>