<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ONBOARDING STEPS -->

    <template id="sales_step1">
        <t t-call="sales_onboarding.onboarding_default_step">
            <t t-set="title">Customers</t>
            <t t-set="description">
                Create / Import  &amp; Manage Customer Information
            </t>
            <t t-set="sl">1</t>
                        <t t-set="btn_text">Add</t><t t-set="btn_text3">Import</t>
                        <t t-set="method" t-value="'onboardings_salesstep1_action'" />
                        <t t-set="method2" t-value="'onboardings_step_sales_import_action'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>

    <template id="sales_step2">
        <t t-call="sales_onboarding.onboarding_default_step">
            <t t-set="title">Services</t>
            <t t-set="description">
               Create / Import the required services

            </t>
            <t t-set="sl">2</t>
                    <t t-set="btn_text">Input</t><t t-set="btn_text3">Import</t>
                    <t t-set="method" t-value="'onboardings_salesstep2_action'" />
                    <t t-set="method2" t-value="'onboardings_step_sales_import_action'" />
                    <t t-set="model" t-value="'res.company'" />

        </t>
    </template>

    <template id="sales_step3">
        <t t-call="sales_onboarding.onboarding_default_step">
            <t t-set="title">Quotations</t>
            <t t-set="description">
                 Prepare  &amp; Follow Up Sales Quotations

            </t>
            <t t-set="sl">3</t>
                        <t t-set="btn_text1">Create</t>
                        <t t-set="method1" t-value="'onboarding_salesstep3_action'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>

    <template id="sales_step4">
        <t t-call="sales_onboarding.onboarding_default_step">
            <t t-set="title"> Estimates</t>
            <t t-set="description">
                Create Relocation Job Estimates
            </t>
            <t t-set="sl">4</t>
                        <t t-set="btn_text1">Manage</t>
                        <t t-set="method1" t-value="'onboarding_salesstep4_action'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>

     <template id="sales_step5">
        <t t-call="sales_onboarding.onboarding_default_step">
            <t t-set="title">Agreements</t>
            <t t-set="description">
               Define an agreement &amp; specify storage charges

            </t>
            <t t-set="sl">5</t>
                        <t t-set="btn_text1">Define</t>
                        <t t-set="method1" t-value="'onboarding_salesapprove2_action'" />
                        <t t-set="model" t-value="'res.company'" />
        </t>
    </template>





    <template id="sales_dashboard_onboarding_panel" name="onboarding.dashboard.onboarding.panel">
        <t t-call="sales_onboarding.onboarding_default_container">
            <t t-set="classes" t-value="'o_onboarding_blue'"/>
            <t t-set="bg_image" t-value="'/onboarding/static/src/img/employee_dashboard_onboarding_bg.jpg'"/>
            <!--            <t t-set="close_method" t-value="'action_close_account_dashboard_onboarding'"/>-->
            <!--            <t t-set="close_model" t-value="'res.company'"/>-->
            <!--            <t t-set="text_completed">Congratulations! You are all set.</t>-->

            <t t-call="sales_onboarding.sales_step1" name="sales_partner"/>
            <t t-call="sales_onboarding.sales_step2" name="sales_location"/>
            <t t-call="sales_onboarding.sales_step3" name="sales_products"/>
            <t t-call="sales_onboarding.sales_step4" name="sales_agreements"/>
            <t t-call="sales_onboarding.sales_step5" name="sales_create"/>



        </t>
    </template>
    <!-- SAMPLE INVOICE EMAIL -->

</odoo>
