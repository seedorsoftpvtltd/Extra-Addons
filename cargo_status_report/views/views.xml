<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sub_job_view_extend" model="ir.ui.view">
            <field name="name">sub_job_view_extend</field>
            <field name="model">sub.job</field>
            <field name="inherit_id" ref="job_booking_sub_job.job_booking_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='flight']" position="before">
                    <field name="job_date" attrs="{'readonly': [('state', 'in', ('confirm','cancel'))]}"/>
                </xpath>

            </field>

        </record>


    <record id="action_cargo_report_view" model="ir.actions.act_window">
            <field name="name">Cargo Status Report</field>
            <field name="res_model">cargo.status.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="cargo_status_report.cargo_status_report_view"/>
            <field name="target">new</field>
    </record>
    <menuitem
        id="cargo_status_report"
        name="Cargo Status Report"
        parent="scs_freight.main_menu_reporting"
        action="action_cargo_report_view"
        sequence="1"
    />
</odoo>