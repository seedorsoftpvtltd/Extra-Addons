<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="show_purchase_filter_view" model="ir.ui.view">
        <field name="name">show.request.quotation.select</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_Orders']" position="after">
                <filter name="purchase_confirm" string="Confirmed Order" domain="[('state', '=', 'purchase')]"/>
                <filter name="purchase_cancel" string="Cancelled Order" domain="[('state', '=', 'cancel')]"/>
            </xpath>
        </field>
    </record>
</odoo>