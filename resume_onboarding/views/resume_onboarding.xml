<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ONBOARDING STEPS -->

    <template id="resume_step1">
        <t t-call="resume_onboarding.onboarding_default_step">
            <t t-set="title">Add</t>
            <t t-set="description">
                Add your new resume lines by specifying the displaying type.
            </t>
            <t t-set="sl">1</t>

        </t>
    </template>

    <template id="resume_step2">
        <t t-call="resume_onboarding.onboarding_default_step">
            <t t-set="title">Specify</t>
            <t t-set="description">
               Specify the start and end date for your experience and add your attachment.
            </t>
            <t t-set="sl">2</t>
<!--             <t t-set="btn_text">Add</t>-->
<!--                        <t t-set="done_text">step 2 set.</t>-->
<!--                        <t t-set="method" t-value="'onboarding_resume1_action'" />-->
<!--                        <t t-set="model" t-value="'res.company'" />-->
        </t>
    </template>

    <template id="resume_step3">
        <t t-call="resume_onboarding.onboarding_default_step">
            <t t-set="title">Choose</t>
            <t t-set="description">
                According to the resume type check in the current company/relevant experience.
            </t>
            <t t-set="sl">3</t>
        </t>
    </template>

    <template id="resume_step4">
        <t t-call="resume_onboarding.onboarding_default_step">
            <t t-set="title">Progress</t>
            <t t-set="description">
                The Total Experience can be seen in the employees profile.
            </t>
            <t t-set="sl">4</t>
        </t>
    </template>


    <template id="resume_dashboard_onboarding_panel" name="onboarding.dashboard.onboarding.panel">
        <t t-call="resume_onboarding.onboarding_default_container">
            <t t-set="classes" t-value="'o_onboarding_blue'"/>
            <t t-set="bg_image" t-value="'/onboarding/static/src/img/employee_dashboard_onboarding_bg.jpg'"/>
            <!--            <t t-set="close_method" t-value="'action_close_account_dashboard_onboarding'"/>-->
            <!--            <t t-set="close_model" t-value="'res.company'"/>-->
            <!--            <t t-set="text_completed">Congratulations! You are all set.</t>-->

            <t t-call="resume_onboarding.resume_step1" name="add_setup"/>
            <t t-call="resume_onboarding.resume_step2" name="specify_setup"/>
            <t t-call="resume_onboarding.resume_step3" name="Choose_setup"/>
            <t t-call="resume_onboarding.resume_step4" name="Progress_setup"/>


        </t>
    </template>
    <!-- SAMPLE INVOICE EMAIL -->

</odoo>
