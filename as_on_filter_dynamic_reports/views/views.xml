<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ins_general_ledger_wizard_inherit" model="ir.ui.view">
            <field name="name">ins.general.ledger.view</field>
            <field name="model">ins.general.ledger</field>
            <field name="inherit_id" ref="account_dynamic_reports.ins_general_ledger_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_from']" position="replace">
					 <field name="date_from" attrs="{'invisible': [('date_range', 'in', ['as_on_filter'])]}"/>

				</xpath>
            </field>
        </record>

