<odoo>

     <record id="action_orders_invoice" model="ir.actions.act_window">
            <field name="name">Sale Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form,calendar,graph,pivot,kanban,activity</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('state','in',['sale','done'])]</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        </record>

    <menuitem id="menu_account_sale_order_invoices"
              action="action_orders_invoice"
              parent="account.menu_finance_receivables"
              sequence="99"/>

</odoo>
