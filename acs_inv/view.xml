						<table class="table" style="width:100%;" id="order"-->
						<!--tbody class="invoice_tbody"-->
                            <t t-set="sno" t-value="0"/>
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td style="width:3%;"><t t-set="sno" t-value="sno+1"/><span t-esc="sno"/></td>
                                <td style="width:34%;"><span t-esc="l.name[:35] if l.name else ''"/><!--span t-field="l.name"/--></td>
                                <td style="width:3%;"><span t-field="l.product_id.l10n_in_hsn_code"/></td>
                                <td style="width:5%;" class="text-center">
                                    <span t-esc="'{0:,.0f}'.format(int(l.quantity))"/>
                                </td>
								<td style="width:3%;" class="text-center">
                                    <span t-field="l.product_uom_id"/>
                                </td>
                                <td style="width:8%;" class="text-left">
                                    <span t-field="l.price_unit"/>
                                </td>
								<td style="width:3%;" class="text-center">
                                    <span t-esc="'{0:,.0f}'.format(int(l.discount))"/><span>%</span>
                                </td>
								<td style="width:4%;" class="text-center">
                                    <!--span t-field="l.price_unit"/-->
									<span t-esc="'{0:,.0f}'.format(int(l.tax_ids.amount))"/><span>%</span>
									<!--span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))" id="line_tax_ids"/-->
								</td>
								<td style="width:10%;" class="text-left" id="subtotal">
                                    <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
								<!--td class="text-center"-->
								<t t-if="l.tax_ids">
									<t t-set="cgst" t-value="0"/>
