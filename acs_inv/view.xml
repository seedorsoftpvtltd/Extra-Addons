                                                <t t-foreach="txt.children_tax_ids" t-as="tx">
                                                 <t t-set="rm" t-value="tx.name"/>
                                                 <td style="width:5%;" class="text-left">
                                                      <span t-esc="'%.1f'%(tx.amount)"/><span>%</span>
                                                 </td>
                                                 <t t-set="gst" t-value="'%.2f'%((l.price_subtotal/100)*tx.amount)"/>
												 <t t-set="cgst" t-value="(cgst+float(gst))"/>
												 <td style="width:8%;" class="text-left">
                                                      <span t-esc="gst"/>
                                                 </td>
                                                </t>
												
												                        
                                              </t>
									</t>
								</t>
