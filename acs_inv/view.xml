								                <td style="width:4%;" class="text-center"><b>GST</b></td>
								                <td style="width:10%;" class="text-center"><b>Tax</b></td>
								                <td style="width:5%;" class="text-center"><b>CGST</b></td>
								                <td style="width:8%;" class="text-center"><b>CGST</b></td>
								                <td style="width:5%;" class="text-center"><b>SGST</b></td>
								                <td style="width:8%;" class="text-center"><b>SGST</b></td>
               
