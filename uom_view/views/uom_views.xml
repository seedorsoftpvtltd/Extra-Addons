<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="uom_view_form_extend" model="ir.ui.view">
            <field name="name">uom.view.form.extend</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom.product_uom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='uom_details']" position="replace">
                    <group name="uom_details">
                        <field name="category_id" string="Base Unit of Measure" required="1"/>
                        <field name="name" string="Unit of Measure Code" required="1"/>
                        <field name="ratio" digits="[42,5]" required="1"/>
                          <field name="convertion" string='Unit Of Measure' readonly="1" force_save="1" attrs="{'invisible':[('uom_type','=','reference')]}"/>
                        <field name="uom_type" invisible="1"/>
                             <label for="factor"
                                attrs="{'invisible':[('uom_type','!=','smaller')]}" invisible="1"/>
                            <div attrs="{'invisible':[('uom_type','!=','smaller')]}" class="o_row" invisible="1">
                                <field name="factor"
                                    digits="[42,5]"
                                    attrs="{'readonly':[('uom_type','=','bigger')]}"/>
                                <span class="oe_grey">
                                    e.g: 1*(reference unit)=ratio*(this unit)
                                </span>
                            </div>
                            <label for="factor_inv"
                                 attrs="{'invisible':[('uom_type','!=','bigger')]}" invisible="1"/>
                            <div attrs="{'invisible':[('uom_type','!=','bigger')]}" class="o_row" invisible="1">
                                <field name="factor_inv"
                                    digits="[42,5]"
                                    attrs="{'readonly':[('uom_type','!=','bigger')]}"/>
                                <span class="oe_grey">
                                    e.g: 1*(this unit)=ratio*(reference unit)
                                </span>
                            </div>

                    </group>
                </xpath>
                <xpath expr="//field[@name='rounding']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>


            </field>
            </record>
        <record id="uom_view_form_extend1" model="ir.ui.view">
            <field name="name">uom.view.form.extend</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom_unece.product_uom_form_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='unece_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>