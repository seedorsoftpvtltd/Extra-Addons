<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="ecertificate" inherit_id="survey.certification_report_view">
   <xpath expr="//div[@class='article certification-wrapper']" position="replace">

                <div t-att-data-oe-model="user_input._name" t-att-data-oe-id="user_input.id" class="article certification_seed" t-attf-style="background:url('/web/static/src/img/seedor.png') no-repeat;
     background-size: 100% 100%;
     font-family:Times New Roman;
    height: 610px;
    width: 860px;">

     <div t-attf-class="certification #{'test-entry' if user_input.test_entry else ''}" style=" width: 100%;
         text-align: center; padding-top: 5%; padding-right: 25%;" >

                <br></br>
                <br></br>
         <br></br>
         <div style="padding-left: 40%;">
           <h2 style="color:#800000;">
                            <span t-field="user_input.survey_id.create_uid.company_id.display_name"/>
           </h2>

               <span t-field="user_input.survey_id.create_uid.company_id.street"/>,
               <span t-field="user_input.survey_id.create_uid.company_id.city"/>,
               <span t-field="user_input.survey_id.create_uid.company_id.state_id"/><br></br>
               <span style="color:#800000;" t-field="user_input.survey_id.create_uid.company_id.phone"/><br></br>
               <span style="color:#800000;" t-field="user_input.survey_id.create_uid.company_id.email"/><br></br>
                          <span style="color:#800000;" t-field="user_input.survey_id.create_uid.company_id.website"/>


<!--                        <p>Certifies that</p>-->
         </div>
         <div>
             <br></br>
          <br></br>
                        <h2 style="color:#800000;">
                            <span t-esc="user_input.partner_id.name or user_input.email"/>
                        </h2>
                        <!-- You should not print a certificate if failed :) -->
                        <p t-if="user_input.quizz_passed">Successfully achieved</p>
                        <p t-if="not user_input.quizz_passed">Successfully failed</p>
                        <h3 style="color:#800000;">
                            <span t-field="user_input.survey_id.display_name"/>
                        </h3><span>who has completed the prescribed course of study and passed  <!--stong t-field="user_input.quizz_score"/--> </span>
                        <p>
                            <strong t-if="user_input.quizz_passed">Date of Certification:</strong>
                            <strong t-if="not user_input.quizz_passed">Date of Failure:</strong>
                            <span t-field="user_input.create_date"/>
                        </p>
						<img style="padding-left:5%; hight:50%;Width:50%;" t-att-src="'data:image/png;base64,%s' % to_text(user_input.survey_id.create_uid.company_id.favicon)"/><br/>
						<img style="padding-left:5%; hight:50%;Width:50%;" t-att-src="'data:image/png;base64,%s' % to_text(user_input.survey_id.create_uid.company_id.favicon)"/><br/>
             <span style="padding-left:5%;"> Registrar Signature</span>

</div>


