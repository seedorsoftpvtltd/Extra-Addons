<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="warehouse_packages_form" model="ir.ui.view">
        <field name="name">warehouse.packages.form</field>
        <field name="model">warehouse.packages</field>
        <field name="arch" type="xml">
            <form>

                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="short_description"/>




                    </group>

                </sheet>


            </form>
        </field>
    </record>


    <record id="warehouse_packages_tree" model="ir.ui.view">
        <field name="name">warehouse.packages.tree</field>
        <field name="model">warehouse.packages</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="short_description"/>

            </tree>
        </field>
    </record>


    <record id="warehouse_packages_action" model="ir.actions.act_window">
        <field name="name">Type of Packages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">warehouse.packages</field>
        <field name="view_mode">tree,form</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no product available today
            </p>

        </field>
    </record>


