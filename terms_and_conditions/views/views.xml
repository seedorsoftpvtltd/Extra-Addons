    <record id="service_view_form" model="ir.ui.view">
        <field name="name">service.types.view.form</field>
        <field name="model">service.types</field>
        <field name="arch" type="xml">
            <form string="Scope Of Service">
                <sheet>
                    <group>

                        <field name="types"/>
                         <field name="terms"/>
<!--                        <field name="active"/>-->

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="service_view_tree" model="ir.ui.view">
        <field name="name">service.types.view.tree</field>
        <field name="model">service.types</field>
        <field name="arch" type="xml">
            <tree string="Scope Of Service" editable="bottom">
                <field name="types"/>



<!--                <field name="active" invisible="1"/>-->
            </tree>
        </field>
    </record>



    	<record id="service_types_view_kanban" model="ir.ui.view">
        <field name="name">service.types.view.kanban</field>
        <field name="model">service.types</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="types"/>
				<templates>
					<t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details d-flex flex-column">
                                       <field name="types"/>
							</div>
						</div>
					</t>
				</templates>
            </kanban>
        </field>
    </record>

            <record id="service_types_action" model="ir.actions.act_window">
        <field name="name">Scope Of Service</field>
        <field name="res_model">service.types</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Service Types Based on Job Types
            </p>
        </field>
    </record>

        <menuitem id="service_types_id"
        name="Scope Of Service"
        parent="menu_terms_root"
              action="service_types_action"
        sequence="99"/>

