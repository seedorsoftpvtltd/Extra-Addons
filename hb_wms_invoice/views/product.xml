<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="product_normal_form_view_ext">
        <field name="name">product_normal_form_view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_width']" position="after">
                <field name="prod_volume" invisible="1"/>
                <field name="prod_sqm" invisible="1"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_template_ext_form_view">
        <field name="name">product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_width']" position="after">
               <field name="prod_volume" invisible="1"/>
                <field name="prod_sqm" invisible="1"/>
            </xpath>
        </field>
    </record>
