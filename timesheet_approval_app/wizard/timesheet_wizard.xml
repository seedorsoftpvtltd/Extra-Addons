<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="wizard_form" model="ir.ui.view">
        <field name="name">reject.wizard.new</field>
        <field name="model">reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Warning1">
                <group>
                	<field name="reason"/>         
                </group>

                <footer>
                    <button name="reject_button" string="Reject" 
                      type="object" class="oe_highlight" 
                      />
                    <button string="Cancel" class="bin-secondary" special="cancel"/>
                   
                </footer>
            </form>
        </field>
       </record>

    <record id="action_confirm1" model="ir.actions.act_window">
        <field name="name">Reject Timesheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_form"/>
        <field name="target">new</field>

      </record>


      <record id="wizard_form_2" model="ir.ui.view">
        <field name="name">approve.wizard.new</field>
        <field name="model">approve.wizard</field>
        <field name="arch" type="xml">
            <form string="Warning2">
                <group>
                  <field name="message"/> 
                </group>  
                <footer>
                    <button name="approve_button" string="Approve" 
                      type="object" class="oe_highlight"
                      />
                    <button string="Cancel" class="bin-secondary" special="cancel"/>
                   
                </footer>
            </form>
        </field>
       </record>

    <record id="action_confirm2" model="ir.actions.act_window">
        <field name="name">Approve Timesheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approve.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_form_2"/>
        <field name="target">new</field>

      </record>
</odoo>