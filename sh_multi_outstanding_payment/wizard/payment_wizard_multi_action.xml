<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sh_payment_wizard_form" model="ir.ui.view">
        <field name="name">view.sh.payment.wizard.form</field>
        <field name="model">sh.payment.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <group>
                <group>
                    <field name="partner_id" />
                    <field name="date"/>
                    <field name="account_id" />
                </group>
                <group></group>
            </group>

            <group string="Payments">
                <field name="sh_move_line_ids" nolabel="1">
                    <tree>
                        <field name="date"/>
                        <field name="name"/>
                        <field name="move_id"/>
                        <field name="move_line_id" invisible="1"/>
                        <field name="amount"/>
                        <field name="sh_boolean" widget="boolean_toggle"/>
                    </tree>
                </field>
            </group>


            <group string="Invoice/Bill Details" >
                <field name="sh_account_move_ids"  nolabel="1">
                    <tree>
                        <field name="name" />
                        <field name="invoice_origin" />
                        <field name="company_id" />
                        <field name="invoice_date_due" />
                        <field name="amount_untaxed_signed" />
                        <field name="amount_total_signed" />
                        <field name="amount_residual_signed" />
                        <field name="state" />
                    </tree>
                </field>
            </group>
            
            <footer>
                <button  string="Make Payment"  name="add_payment_wizard" type="object" class="oe_highlight" icon="fa-money" />
                <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
            </footer>
            
        </field>
    </record>

    <record id="action_view_sh_payment_wizard" model="ir.actions.act_window">
        <field name="name">Payment Allocation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
