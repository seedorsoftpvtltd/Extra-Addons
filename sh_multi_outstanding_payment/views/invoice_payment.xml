<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="model_account_move_action_payment_wizard" model="ir.actions.server" >
        <field name="name">Outstanding Payment</field>
        <field name="model_id" ref="sh_multi_outstanding_payment.model_sh_invoice_wizard"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name='groups_id' eval="[(4, ref('sh_multi_outstanding_payment.group_outstanding_payment'))]"/>
		<field name="state">code</field>
        <field name="binding_view_types">list</field>
         <field name="code">
            action = model.action_outstanding_payment()
        </field>
    </record>

    <record id="model_account_payment_action_payment_wizard" model="ir.actions.server">
        <field name="name">Payment Allocation</field>
        <field name="model_id" ref="sh_multi_outstanding_payment.model_sh_payment_wizard"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="groups_id" eval="[(4, ref('sh_multi_outstanding_payment.group_outstanding_payment'))]"/>
        <field name="state">code</field>
        <field name="binding_view_types">list</field>
        <field name="code"> action = model.action_payment_allocation() </field>
    </record>
</odoo>
