<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='trial_period_setting']" position="after">-->
                <xpath expr="//field[@name='module_delivery']/../../.." position="after">
                    <h2 class="mt32">Subscription Remainder</h2>
                    <div class="col-xs-12 col-md-12 o_setting_box">
                            <!-- <div class="o_setting_right_pane"> -->
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="remainder_days" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="remainder_days" class="oe_inline" required="0"/>
                                    </div>
                                </div>
                            <!-- </div> -->
                        </div>
                    <div class="col-xs-12 col-md-12 o_setting_box">
                            <!-- <div class="o_setting_right_pane"> -->
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="remainder_year_days" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="remainder_year_days" class="oe_inline" required="0"/>
                                    </div>
                                </div>
                            <!-- </div> -->
                        </div>

                </xpath>
            </field></record>
    </data>
</odoo>