<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_crm_lead_form_inherit_address" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.address</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('o_address_format')]" position="replace">
                <div>
                    <field name="street" placeholder="Street..." string="Door No" class="o_address_street"/>
                    <field name="street2" placeholder="Street 2..." string="Street" class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                    <field name="country_id" placeholder="Country" class="o_address_country"
                           options='{"no_open": True, "no_create": True}'/>

                </div>
            </xpath>
        </field>
    </record>
</odoo>