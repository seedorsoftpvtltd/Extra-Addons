<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="sh_purchase_quotation_report_document_custom" inherit_id="purchase.report_purchasequotation_document">
		<xpath expr="//table/thead/tr[1]/th[3]" position="before">
			<th class="text-right">Bag Quantity</th>
		</xpath>
		<xpath expr="//table//tbody//tr[1]//td[3]" position="before">
			<td class="text-right">
               <span t-field="order_line.sh_bag_qty"/>
            </td>
		</xpath>

		<xpath expr="//table/thead/tr[1]/th[2]" position="after">
            <th class="text-right" t-if="o.sh_enable_quantity_in_report==True">Quantity in Bag</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[2]" position="after">
            <td class="text-right"  t-if="o.sh_enable_quantity_in_report==True">
                <span t-field="order_line.sh_qty_in_bag" />
            </td>
        </xpath>


	</template>
	<template id="sh_purchase_order_report_document_custom" inherit_id="purchase.report_purchaseorder_document">
		<xpath expr="//table/thead/tr[1]/th[4]" position="before">
			<th class="text-right">Bag Quantity</th>
		</xpath>
		<xpath expr="//table//tbody//tr[1]//td[4]" position="before">
			<td class="text-right">
                <span t-field="line.sh_bag_qty"/>
            </td>
		</xpath>

		<xpath expr="//table/thead/tr[1]/th[4]" position="after">
            <th class="text-right" t-if="o.sh_enable_quantity_in_report==True">Quantity in Bag</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[4]" position="after">
            <td class="text-right" t-if="o.sh_enable_quantity_in_report==True">
                <span t-field="line.sh_qty_in_bag" />
            </td>
        </xpath>
	</template>
</odoo>
