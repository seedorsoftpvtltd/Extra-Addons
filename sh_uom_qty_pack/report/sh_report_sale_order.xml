<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="sh_sale_order_report_document_custom" inherit_id="sale.report_saleorder_document">
		<xpath expr="//table/thead/tr[1]/th[2]" position="before">
			<th class="text-right">Bag Quantity</th>
		</xpath>
		<xpath expr="//table//tbody//tr[1]//td[2]" position="before">
			<td class="text-right" >
            	<span t-field="line.sh_bag_qty"/>
         	</td>
		</xpath>

		 <xpath expr="//table/thead/tr[1]/th[1]" position="after" >
            <th class="text-left" t-if="doc.sh_enable_quantity_in_report==True" >Quantity in Bag</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[1]" position="after" >
            <td class="text-left" t-if="doc.sh_enable_quantity_in_report==True">
                <span  t-field="line.sh_qty_in_bag"  />
            </td>
        </xpath>
	</template>
</odoo>