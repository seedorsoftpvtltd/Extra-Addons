<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_stock_picking_form_view_custom" model="ir.ui.view">
			<field name="name">sh.stock.picking.form.view.custom</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">

				<field name="picking_type_id" position="after">
					<field name="sh_enable_quantity" invisible="1"/>
					<field name="sh_enable_quantity_in_report" invisible="1"/>
				</field>

				<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom']" position="before">
					<field name="sh_qty_in_bag" attrs="{'column_invisible': [('parent.sh_enable_quantity', '=', False )]}"/>
					<field name="sh_bag_qty"/>										
				</xpath>
				<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="attributes">
					<attribute name="force_save">1</attribute>										
				</xpath>
				<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='reserved_availability']" position="attributes">
					<attribute name="force_save">1</attribute>										
				</xpath>
			</field>	
		</record>
	</data>
</odoo>