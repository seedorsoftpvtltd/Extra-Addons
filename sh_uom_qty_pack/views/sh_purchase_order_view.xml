<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_purchase_order_form_view_custom" model="ir.ui.view">
			<field name="name">sh.purchase.order.form.view.custom</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>	
			<field name="arch" type="xml">
				<field name="partner_ref" position="after">
					<field name="sh_enable_quantity" invisible="1" />
					<field name="sh_enable_quantity_in_report" invisible="1" />
				</field>

				<xpath expr="//sheet/notebook/page[1]/field[@name='order_line']/tree/field[@name='product_qty']" position="before">
					<field name="sh_qty_in_bag" attrs="{'column_invisible': [('parent.sh_enable_quantity', '=', False )]}"/>
					<field name="sh_bag_qty"/>
				</xpath>
			</field>	
		</record>
	</data>
</odoo>