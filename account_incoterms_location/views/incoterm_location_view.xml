<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="account_incoterm_location_view_form" model="ir.ui.view">
        <field name="name">account.incoterm.location.view.form</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.account_incoterms_form"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="location_required" />
                </field>
            </field>
    </record>

    <record id="account_incoterm_location_view_tree" model="ir.ui.view">
        <field name="name">account.incoterm.locatiom.view.tree</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.view_incoterms_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="location_required" />
                </field>
            </field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <field name="incoterm_id" position="after">
                    <field name="location_incoterm" />
                </field>
            </field>
    </record>

    <record id="purchase_order_incoterm_location_view_form" model="ir.ui.view">
        <field name="name">purchase.order.incoterm.location.view.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
            <field name="arch" type="xml">
                <field name="incoterm_id" position="after">
                    <field name="location_incoterm" />
                </field>
            </field>
    </record>

    <record id="account_incoterm_location_view_move_form" model="ir.ui.view">
        <field name="name">account.incoterm.location.view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="invoice_incoterm_id" position="after">
                    <field name="location_incoterm" />
                </field>
            </field>
    </record>

    <record id="sale_order_incoterm_location_view_form" model="ir.ui.view">
        <field name="name">sale.order.incoterm_location_view_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <field name="incoterm" position="after">
                    <field name="location_incoterm" />
                </field>
            </field>
    </record>
</odoo>
