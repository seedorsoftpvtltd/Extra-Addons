<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--button，自动取号-->
        <record id="app_view_stock_move_operations" model="ir.ui.view">
            <field name="name">app.stock.move.operations.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='next_serial']" position="before">
                    <field name="tracking_sequence" attrs="{'invisible': [('display_assign_serial', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='next_serial']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
