<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="app_view_production_lot_form" model="ir.ui.view">
            <field name="name">app.stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='name']" position="after">
                    <button string="Auto Number" type="object" name="generate_name" class="btn-sm btn-primary oe_edit_only"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
