<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--button，自动取号-->
        <record id="app_view_stock_move_line_operation_tree" model="ir.ui.view">
            <field name="name">app.stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <button name="action_get_lot_name_auto" type="object" groups="stock.group_production_lot" icon="fa-arrow-right"
                            title="Auto Number"
                            invisible="not context.get('show_lots_text')"
                            attrs="{'invisible': ['&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True)]}"/>
                </xpath>
            </field>
        </record>
        <record id="app_view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
            <field name="name">app.stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <button name="action_get_lot_name_auto" type="object" groups="stock.group_production_lot" icon="fa-arrow-right"
                            title="Auto Number"
                            attrs="{'column_invisible': [('parent.show_lots_text', '=', False)], 'invisible': [('lots_visible', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
