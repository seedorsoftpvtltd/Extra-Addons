<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--button，自动取号-->
        <record id="app_view_assign_serial_numbers" model="ir.ui.view">
            <field name="name">app_stock_assign_serial_numbers</field>
            <field name="model">stock.assign.serial</field>
            <field name="inherit_id" ref="stock.view_assign_serial_numbers"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="next_readonly" invisible="1"/>
                    <field name="quantity_done" invisible="1"/>
                    <field name="tracking_sequence" attrs="{'invisible': [('tracking_sequence', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='next_serial_number']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="attrs">
                        {'readonly': [('next_readonly', '=', True)]}
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
