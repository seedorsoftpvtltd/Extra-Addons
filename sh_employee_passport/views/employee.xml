<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_employee_form_view" model="ir.ui.view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='public']" position="after">
                    <page string="Visa Information" groups="hr.group_hr_user">
                        <field name="sh_employee_passport_ids">
                            <form string="Visa Information">
                                <group>
                                    <group>
                                        <field name="name" />
                                        <field name="sh_application_date" />
                                        <field name="sh_duration" />
                                        <field name="sh_expiry_date" />
                                        <field name="states" />
                                    </group>
                                </group>
                            </form>
                            <tree editable="bottom">
                                <field name="name" />
                                <field name="sh_application_date" />
                                <field name="sh_duration" />
                                <field name="sh_expiry_date" />
                                <field name="states" />
                            </tree>
                        </field>
                    </page>
                </xpath>
                <field name="address_id" position="after">
                    <field name="states" invisible="1" />
                </field>
                <xpath expr="//sheet//div[@name='button_box']" position="before">
                    <div attrs="{'invisible': [('states', 'not in', ['draft'])]}">
                        <span class="bg bg-info pull-right">New</span>
                    </div>
                    <div attrs="{'invisible': [('states', 'not in', ['progress'])]}">
                        <span class="bg bg-warning pull-right">Under Progress</span>
                    </div>
                    <div attrs="{'invisible': [('states', 'not in', ['approved'])]}">
                        <span class="bg bg-success pull-right">Approved</span>
                    </div>
                    <div attrs="{'invisible': [('states', 'not in', ['cancelled'])]}">
                        <span class="bg bg-danger pull-right">Cancelled</span>
                    </div>
                    <div attrs="{'invisible': [('states', 'not in', ['expired'])]}">
                        <span class="bg bg-danger pull-right">Expired</span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
