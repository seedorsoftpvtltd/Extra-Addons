<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_res_config_setting_view" model="ir.ui.view">
            <field name="name">sh.res.config.setting.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr']" position="inside">
                    <h2>Notification before expire employee Visa</h2>
                    <div class="row o_settings_container">
                        <div class="col-xs-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_notify_days" groups="hr.group_hr_user" />
                                <br />
                                <field name="sh_notify_days" groups="hr.group_hr_user" />
                                <br />
                                <label for="sh_partner_ids" groups="hr.group_hr_user" />
                                <br />
                                <field name="sh_partner_ids" widget="many2many_tags" groups="hr.group_hr_user" />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
