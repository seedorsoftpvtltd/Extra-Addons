<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_res_company_form_view" model="ir.ui.view">
            <field name="name">sh.res.company.form.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Expired Visa Information" invisible="1">
                        <field name="sh_expired_visa_ids">
                            <form string="Expired Employee Visa Information">
                                <group>
                                    <group>
                                        <field name="sh_application_no" />
                                        <field name="employee_id" />
                                        <field name="sh_application_date" />
                                        <field name="sh_duration" />
                                    </group>
                                    <group>
                                        <field name="sh_expiry_date" />
                                        <field name="states" />
                                    </group>
                                </group>
                            </form>
                            <tree editable="bottom">
                                <field name="sh_application_no" />
                                <field name="employee_id" />
                                <field name="sh_application_date" />
                                <field name="sh_duration" />
                                <field name="sh_expiry_date" />
                                <field name="states" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
