<odoo>
    <data>

        <record model="ir.ui.view" id="mail_activity_view_custom_inherit_probc_activity">
            <field name="name">mail.activity.custom</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="before">
                    <div name='button_box' class="oe_button_box" >
                        <button
                            class="oe_stat_button" 
                            type="object" 
                            icon="fa-envelope"
                            name="open_activity_message"
                            string="Portal Messages"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='note']" position="before">
                    <group>
                        <group name='is_share_portal' string='Sharing On Portal'>
                            <field name='is_share_portal_custom'/>
                            <field name='is_custom_description_probc' attrs="{'invisible':[('is_share_portal_custom', '!=', True)]}"/>
                            <field name='custom_partner_ids' widget="many2many_tags" 
                            attrs="{'invisible':[('is_share_portal_custom', '!=', True)]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mail_activity_view_type_activity_customs">
            <field name="name">mail.activity.type.custom</field>
            <field name="model">mail.activity.type</field>
            <field name="inherit_id" ref="mail.mail_activity_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_description']" position="before">
                    <group>
                        <group name='is_share_portals' string='Sharing On Portal'>
                            <field name='is_share_portal'/>
                            <field name='is_custom_description'/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
