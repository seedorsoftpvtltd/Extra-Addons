<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add two fields for display Rank and Amount in existing model 'hr.employee' kanban view-->
    <record id="hr_kanban_view_employees_sales_rank_inherited" model="ir.ui.view" >
        <field name="name">hr.employee.kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_details']" position = 'inside'>
                <ul>
                    <li groups = "abs_sales_rank.group_only_show_sales_rank"><strong><label>Sales Order Amount : <field name="amount_sale_order_rank"/></label></strong></li>
                    <li groups = "abs_sales_rank.group_only_show_sales_rank"><strong><label>Sales Order Rank : <field name="number_sale_order_rank"/></label></strong></li>
                </ul>
            </xpath>
        </field>
    </record>

</odoo>


