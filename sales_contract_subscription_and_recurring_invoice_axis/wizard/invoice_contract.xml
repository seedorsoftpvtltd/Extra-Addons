<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="account_contract_form_view" model="ir.ui.view">
        <field name="name">Contract Invoice</field>
        <field name="model">account.contract.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice Form">
                <group>
                    <field name="date_from"/>
                </group>
                <footer>
                    <button name="invoice_generate" string="Create Invoice" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

	<record id="action_contract_invoice" model="ir.actions.act_window">
        <field name="name">Contract invoice</field>
        <field name="res_model">account.contract.invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_contract_form_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

	<menuitem id="menu_contract_invoice"
          name="Contract Invoice"
          sequence="3"
          action="action_contract_invoice"
          parent="sales_contract_subscription_and_recurring_invoice_axis.menu_analytic_contract"/>
</odoo>