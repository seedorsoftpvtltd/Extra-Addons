<odoo>
    <data>
        <report
            id="contract_report"
            model="account.analytic.account"
            string="Contract Report"
            name="sales_contract_subscription_and_recurring_invoice_axis.custom_contarct_report_template" 
            file="sales_contract_subscription_and_recurring_invoice_axis.custom_contarct_report_template"
            report_type="qweb-pdf" />

        <report
            id="bulk_contract_report_print"
            model="account.analytic.account"
            string="Multiple Contract report"
            name="sales_contract_subscription_and_recurring_invoice_axis.custom_contarct_report_template" 
            file="sales_contract_subscription_and_recurring_invoice_axis.custom_contarct_report_template"
            report_type="qweb-pdf" />

        <template id="custom_contarct_report_template" name="Contract Report Template">
            <t t-call="web.html_container">
                <t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="9"/>
                <t t-call ="sales_contract_subscription_and_recurring_invoice_axis.internal_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div class="report-border" style="margin-bottom:10px;border-bottom:1px solid #cccccc;margin-top:10px;"/>
                            <h3>Company Details</h3>
                            <div class="row">
                                <div class="col-7">
                                    <div><strong>Company : </strong><span t-field="res_company.name"/></div>
                                    <strong>Address :</strong>
                                        <span t-field="res_company.street" t-if="res_company.street"/><span t-field="res_company.street2" t-if="res_company.street2"/>
                                    <div class="company-city">
                                        <span t-field="res_company.city" t-if="res_company.city"/>
                                        <span t-field="res_company.zip" t-if="res_company.zip"/>
                                    </div>
                                    <div class="company-state">
                                        <span t-field="res_company.state_id.name" t-if="res_company.state_id"/>
                                        <span t-field="res_company.country_id.name" t-if="res_company.country_id"/>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div><strong>Phone : </strong><span t-field="res_company.phone"/></div>
                                    <div><strong>Email : </strong><span t-field="res_company.email"/></div>
                                    <div><strong>Website :</strong><span t-field="res_company.website"/></div>
                                </div>
                            </div>
                            <div class="report-border" style="margin-bottom:10px;border-bottom:1px solid #cccccc;margin-top:10px;"/>
                            <div class="col-12">
                                <h2 t-field="doc.name"/>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div><strong>Customer Name :</strong><span t-field="doc.partner_id.name"/></div>
                                    <div><strong>Date Of Next Invoice :</strong><span t-field="doc.date_of_next_invoice"/></div>
                                    <div><strong>Contract Start Date :</strong><span t-field="doc.start_contract_date"/></div>
                                    <div><strong>Company :</strong><span t-field="doc.company_id.name"/></div>
                                </div>
                                <div class="col-6">
                                    <div><strong>Reference :</strong><span t-field="doc.code"/></div>
                                    <div><strong>Recuring Period :</strong><span t-field="doc.code"/></div>
                                    <div><strong>Contract End Date :</strong><span t-field="doc.end_contract_date"/></div>
                                    <div><strong>Contract Status :</strong><span t-field="doc.state"/></div>
                                </div>
                            </div>
                            <div class="report-border" style="margin-bottom:10px;border-bottom:1px solid #cccccc;margin-top:10px;"/>
                            <div class="table-responsive">
                                <div class="text-center">
                                    <h3><strong>Contract Lines</strong></h3>
                                </div>
                                <table class="table table-sm col-md-6">
                                    <thead>
                                        <tr class="active">
                                            <th>Product</th>
                                            <th>Description</th>
                                            <th>Ordered Qty.</th>
                                            <th>Unit of Measure</th>
                                            <th>Unit Price</th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="doc.contact_line" t-as="line">
                                        <tr class="col-md-4">
                                            <td>
                                                <span t-esc="line.product_id.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.product_uom_qty"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.product_uom.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.price_unit"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                            <div class="clearfix">
                                <div id="total_report_extend" class="row">
                                    <div class="ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td><strong>Subtotal</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_untaxed"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong>Taxes</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_tax"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td><strong>TOTAL</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_total"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="report-border"  style="margin-bottom:10px;border-bottom:1px solid #cccccc;margin-top:10px;"/>
                            <div class="table-responsive">
                                <div class="text-center">
                                    <h3><strong>Sale Order Lines</strong></h3>
                                </div>
                                <table class="table table-sm col-md-6">
                                    <thead>
                                        <tr class="active">
                                            <th>Product</th>
                                            <th>Description</th>
                                            <th>Ordered Qty.</th>
                                            <th>Unit of Measure</th>
                                            <th>Unit Price</th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="doc.order_line_ids" t-as="line">
                                        <tr class="col-md-4">
                                            <td>
                                                <span t-esc="line.product_id.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.product_uom_qty"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.product_uom.name"/>
                                            </td>
                                            <td>
                                                <span class="text-right" t-esc="line.price_unit"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                            <div class="clearfix">
                                <div id="total_report_extend" class="row">
                                    <div class="ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td><strong>Subtotal</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_line_untaxed"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong>Taxes</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_line_tax"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td><strong>TOTAL</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.amount_line_total"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="report-border" style="margin-bottom:10px;border-bottom:1px solid #cccccc;margin-top:10px;"/>
                            <h3><strong>Other Information :</strong></h3>
                            <div t-field="doc.description"/>
                        </div> 
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>