													<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's.</p>
												</div>
												
											</div>
										</div>
										
									</div>
								</div>
							</div>
						</section>
						<!-- service detail content end -->
						<div class="oe_structure"/>
								
				</section>
				</t>
			</t>
		</field>
	</record>

	<record id="centric_servicepage_detail_template_menu" model="website.page">
		<field name="website_published">True</field>
		<field name="url">/service-detail</field>
		<field name="view_id" ref="centric_servicepage_detail_template" />

	</record>

</odoo>