<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<!-- blog template inherit -->
	<template id="blog_page_button_inherit_centric" inherit_id="website_blog.post_teaser" name="Blog Page Inherit Centric">
			<xpath expr="//div[@class='o_wblog_post_short_tag_section d-flex align-items-center flex-wrap pt-2']" position="after">
				<div class="blog-page-btn">
					<a href="#" class="blogpagebtn btn btn-alpha" contenteditable="true">Read More</a>
				</div>
			</xpath>
	</template>

	<template id="blog_page_date_inherit_centric" inherit_id="website_blog.post_info" name="Blog Page Date Inherit Centric">
			<xpath expr="//div[@class='d-flex small flex-wrap mb-1 w-100']" position="replace">
				<div class="d-flex small flex-wrap mb-1 w-100">
			        <div t-attf-class="d-flex flex-wrap align-items-center justify-content-between mx-n2 #{opt_blog_list_view and 'flex-grow-0 w-auto mw-100' or 'flex-grow-1' }">
			        	<time class="blogtime">
			        		<div class="datemonth">
			        			<span t-field="blog_post.post_date" class="text-nowrap font-weight-bold px-2 date-month" t-options='{"format": "MMM d"}'></span>
			        		</div>
			        		<div class="dateyear">
			        			<span t-field="blog_post.post_date" class="text-nowrap font-weight-bold px-2 date-year" t-options='{"format": "yyyy"}'></span>
			        		</div>
			        	</time>

			            
			            
			            <b t-if="posts_list_show_parent_blog" class="text-nowrap text-truncate px-2">
			                <i class="fa fa-folder-open text-muted"/>
			                <a t-attf-href="/blog/#{slug(blog_post.blog_id)}" t-field="blog_post.blog_id"/>
			            </b>
			        </div>
			    </div>
			</xpath>
	</template>

	<template id="blog_page_admin-comment_inherit_centric" inherit_id="website_blog.post_heading" name="Blog Page Admin Comment Inherit Centric">
			<xpath expr="//a[contains(@t-attf-class,'d-block text-reset text-decoration-none o_blog_post_title my-0')]" position="before">
				<div class="admin-comments">
					<a href="#" class="admin-link">
		            	<b class="text-nowrap admin">
		                	<span class="admin fa fa-user"></span>
		                	<span class="blog-admin" t-field="blog_post.author_id"/>
		                </b>
		            </a>
	                <b class="text-nowrap comment">
	                	<i class="comment fa fa-comment text-muted mr-1"/>
	                	<t t-esc="len(blog_post.message_ids)"/><span class="comments">comments</span>
	                </b>
	                <b class="text-nowrap pl-2">
	                	<i class="fa fa-binoculars text-muted mr-1"/>
	                	<t t-esc="blog_post.visits"/>
	                	<span class="visit">visits</span>
	                </b>
	            </div>
			</xpath>
	</template>


	<template id="blog_page_pagination_inherit_centric" inherit_id="portal.pager" name="Blog Page Pagination Inherit Centric">
			<xpath expr="//ul[contains(@t-attf-class,'pagination m-0')]" position="replace">
				<div class="blog-pagination">
					<ul t-if="pager['page_count'] > 1" t-attf-class="#{ classname or '' } pagination m-0 #{_classes}" t-att-style="style or None">
			            <li t-attf-class="page-item #{'disabled' if pager['page']['num'] == 1 else ''}">
			                <a t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else None" class="page-link"><span class="fa fa-angle-double-left"></span></a>
			            </li>
			            <t t-foreach="pager['pages']" t-as="page">
			                <li t-attf-class="page-item #{'active' if page['num'] == pager['page']['num'] else ''}"> <a t-att-href="page['url']" class="page-link" t-raw="page['num']"></a></li>
			            </t>
			            <li t-attf-class="page-item #{'disabled' if pager['page']['num'] == pager['page_count'] else ''}">
			                <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None" class="page-link"><span class="fa fa-angle-double-right"></span></a>
			            </li>
			        </ul>
		        </div>
			</xpath>
	</template>
</odoo>