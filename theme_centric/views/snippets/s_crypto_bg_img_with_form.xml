<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_crypto_bg_img_with_form" name="Form with background image">
		<section class="s_crypto_bg_img_with_form form5"
			style="background-image:url(/theme_centric/static/src/img/form-banner.jpg)">
			<div class="container">
				<div class="row">
					<div class="col-lg-4 col-md-7 text-center both-space ml-auto">
						<section class="card " >
							<div class="card-body">
								<div class="text-box">
									<h2 class="title font-bold">
										<span class="font-stylish text-purple">Best &amp; New</span>
										<br />
										Bitcoin Calculator
									</h2>
									<form class="m-t-30">
										<div class="row">
											<div class="col-lg-12">
												<div class="form-group">
													<input class="form-control" type="text"
														placeholder="Enter Bitcoin" />
												</div>
											</div>
											<div class="col-lg-12">
												<div class="form-group">
													<input class="form-control" type="email"
														placeholder="USD amount" />
												</div>
											</div>
											<div class="col-lg-12">
												<div class="form-group">
													<input class="form-control" type="text"
														placeholder="fees" />
												</div>
											</div>
											<div class="col-lg-12">
												<div class="form-group">
													<input class="form-control" type="text"
														placeholder="tax" />
												</div>
											</div>
											<div class="col-lg-12">
												<div class="form-group">
													<input class="form-control" type="text"
														placeholder="total" />
												</div>
											</div>
											<div class="col-lg-12 d-flex s_btn" data-name="Button">
												<button type="submit"
													class="btn btn-md btn-block btn-alpha rounded-circle arrow-btn bizople_button">
														Buy Bitcoins
														<span class="fa fa-1x fa-fw fa-long-arrow-right ml-1"></span>
												</button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</section>
					</div>
				</div>
			</div>
		</section>

	</template>

</odoo>