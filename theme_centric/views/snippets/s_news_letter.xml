<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_news_letter"
		name="Newsletter Eight">
		<section class="s_news_letter">
			<div class="container">
				<div class="row pt-4 pb-4">
					<div class="tt-col-left">
						<div class="tt-newsletter">

							<h4 class="news_letter_title">Be In Touch With Us:</h4>
							<div class="news_letter_content">
								<div class="form_default input-group js_subscribe d-none"
									data-list-id="1" data-subscribe="off">
									<input type="email" name="email"
										class="js_subscribe_email form-control"
										placeholder="your email..." />
									<span class="input-group-append">
										<a role="button" href="#"
											class="btn btn-primary js_subscribe_btn o_default_snippet_text">Join Us</a>
										<a role="button" href="#"
											class="btn btn-success js_subscribed_btn d-none o_default_snippet_text"
											disabled="disabled">Thanks</a>
									</span>
									<div
										class="alert alert-success d-none o_default_snippet_text"
										role="status">Thanks for your subscription!</div>

								</div>
							</div>
						</div>
					</div>
					<div class="tt-col-right">
						<ul class="social_icons">
							<li>
								<a class="icon" href="/" target="_blank">
									<span class="fa fa-facebook" />
								</a>
							</li>
							<li>
								<a class="icon" href="/" target="_blank">
									<span class="fa fa-google-plus" />
								</a>
							</li>
							<li>
								<a class="icon" href="/" target="_blank">
									<span class="fa fa-twitter" />
								</a>
							</li>
							<li>
								<a class="icon" href="/" target="_blank">
									<span class="fa fa-linkedin" />
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</section>

	</template>

</odoo>