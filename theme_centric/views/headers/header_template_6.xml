<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="website_multi_header_six"
		inherit_id="portal.frontend_layout" name="Header Six" active="False">
		<xpath expr="//header" position="replace">
			<header id="header_six" class="header_six">
				<div class="topbar-1">
					<div class="header11 po-relative navbar-light">
						<div class="h11-topbar">
							<div class="container">
								<nav class="navbar navbar-expand-lg font-14">
									<div class="navbar-collapse" id="header11a">
										<ul class="navbar-nav ml-auto">
											<li class="nav-item">
												<a t-if="website.social_twitter"
													t-att-href="website.social_twitter" class="nav-link">
													<i class="fa fa-twitter" />
												</a>
											</li>
											<li class="nav-item">
												<a t-if="website.social_facebook"
													t-att-href="website.social_facebook" class="nav-link">
													<i class="fa fa-facebook-square" />
												</a>
											</li>
											<li class="nav-item">
												<a t-if="website.social_linkedin"
													t-att-href="website.social_linkedin" class="nav-link">
													<i class="fa fa-linkedin" />
												</a>
											</li>
											<li class="nav-item">
												<a t-if="website.social_instagram"
													t-att-href="website.social_instagram" class="nav-link">
													<i class="fa fa-instagram" />
												</a>
											</li>
											<li class="nav-item">
												<a t-if="website.social_youtube"
													t-att-href="website.social_youtube" class="nav-link">
													<i class="fa fa-youtube-play" />
												</a>
											</li>
											<li class="nav-item">
												<a t-if="website.social_github"
													t-att-href="website.social_github" class="nav-link">
													<i class="fa fa-github" />
												</a>
											</li>
											<li class="nav-item font-14">
												<a class="nav-link">
													<i class="fa fa-phone"></i>
													<span t-esc="res_company.phone"/>
												</a>
											</li>
										</ul>
									</div>
								</nav>
							</div>
						</div>
						<div class="container">
							<nav class="navbar navbar-expand-md header6_navbar">
								<div class="container">
									<a href="/" class="navbar-brand logo">
										<span t-field="res_company.logo"
											t-options="{'widget': 'image'}"
											t-att-alt="'Logo of %s' % res_company.name"
											t-att-title="res_company.name" />
									</a>
									<button type="button"
										class="navbar-toggler collapsed navbar-light ml-auto"
										data-toggle="collapse" data-target="#top_menu_collapse"
										aria-expanded="false">
										<span class="fa fa-bars"></span>
									</button>
									<div
										class="collapse navbar-collapse hover-dropdown flex-column"
										id="top_menu_collapse">
										<ul class="nav navbar-nav ml-auto" id="top_menu">
											<t t-foreach="website.menu_id.child_id" t-as="submenu">
												<t t-call="website.submenu">
													<t t-set="item_class" t-value="'nav-item'" />
													<t t-set="link_class" t-value="'nav-link'" />
												</t>
											</t>
											<li class="nav-item divider" t-ignore="true"
												t-if="not user_id._is_public()" />
											<li class="nav-item dropdown" t-ignore="true"
												t-if="not user_id._is_public()">
												<a href="#" class="nav-link dropdown-toggle"
													data-toggle="dropdown">
													<b>
														<span
															t-esc="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name" />
													</b>
												</a>
												<div class="dropdown-menu js_usermenu" role="menu">
													<a t-attf-href="/my/home" role="menuitem" class="dropdown-item">My Account</a>

													<a id="o_logout" class="dropdown-item"
														t-attf-href="/web/session/logout?redirect=/"
														role="menuitem">Logout</a>
												</div>
											</li>
											<li groups="base.group_public">
												<a class="nav-link" t-attf-href="/web/login">
													<b>Sign in</b>
												</a>
											</li>
										</ul>
									</div>
								</div>
							</nav>
						</div>
					</div>
				</div>
			</header>
		</xpath>
	</template>

</odoo>