<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record model="ir.ui.view" id="fleet_vehicle_form_view">
        <field
            name="name"
        >fleet.vehicle.log.services.form</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field
            name="inherit_id"
            ref="fleet.fleet_vehicle_log_services_view_form"
        />
        <field name="arch" type="xml">
            <field name="vehicle_id" position="after">
                <field name="model" invisible="1"/>
                <field name="template_id" domain="[('model','=',model)]"/>
            </field>
<!--             <xpath expr="//group" position="after">-->
            <xpath expr="//sheet/group[3]" position="after">
<!--                 <notebook>-->
              <group name="Template Lines">
<!--                 <page string="Template Lines" >-->
                            <field
                                name="template_line_ids"
                                mode="tree,kanban"
                                context="{'default_template_id': active_id}"
                            >
                                <tree string="Template Line">
                                    <field name="statee" invisible="1" />
                                    <field name="service_prod"/>
                                      <field name="qty"/>

<!--                                    <field name="u" />-->
<!--                            <field name="qr" />-->
<!--                            <field name="cs" />-->
<!--                            <field name="rate" />-->
<!--                                    <field name="cost"/>-->
<!--                                    <field name="inspection_item_id" />-->
<!--                                    <field name="inspection_item_instruction" />-->
<!--                                    <field name="result_description" />-->
                                    <field
                                        name="result"
                                        widget="label_selection"
                                        options="{'classes': {'failure': 'danger', 'success': 'success'}}"
                                    />
                                    <button
                                        name="action_item_success"
                                        statees="draft"
                                        string="Approve"
                                        type="object"
                                        class="oe_highlight btn-success"
                                        icon="fa-check-circle text-success"
                                        groups="fleet.fleet_group_manager"
                                    />
                                    <button
                                        name="action_item_failure"
                                        statees="draft"
                                        string="Refuse"
                                        type="object"
                                        class="oe_highlight btn-danger"
                                        icon="fa-times-circle text-danger"
                                        groups="fleet.fleet_group_manager"
                                    />
                                </tree>
                            </field>
<!--                 </page>-->
                                 </group>

<!--                 </notebook>-->
             </xpath>

        </field>


    </record>






    <record model="ir.ui.view" id="fleet_vehicle_template_form_view">
        <field
            name="name"
        >fleet.vehicle.template.form (in fleet_vehicle_template)</field>
        <field name="model">fleet.vehicle.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="model"/>
                    </group>
                    <notebook>
                        <page
                            string=" Template Lines"
                            name="template_lines"
                        >
                            <field name="template_line_ids">
                                <tree
                                    string="Template Line"
                                    editable="bottom"
                                >
                                    <field name="service_prod" />
                                        <field name="qty"/>

<!--                           <field name="u" />-->
<!--                            <field name="qr" />-->
<!--                            <field name="cs" />-->
<!--                            <field name="rate" />-->
<!--                            <field name="cost" />-->
                                </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers" />-->
<!--                    <field name="activity_ids" widget="mail_activity" />-->
<!--                    <field name="message_ids" widget="mail_thread" />-->
<!--                </div>-->
            </form>
        </field>
    </record>
