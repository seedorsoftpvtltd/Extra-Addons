<?xml version="1.0"?>
<odoo>
    <data>
<record model="ir.actions.act_window" id="action_purchase_fleet">
        <field name="name">Requisition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">material.purchase.requisition</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('veh_service_id','=',active_id)]</field>
        <field name="context">{
            "default_veh_service_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>

<record id="action_fleet_purchase_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="material_purchase_requisitions.material_purchase_requisition_tree_view"/>
        <field name="act_window_id" ref="action_purchase_fleet"/>
    </record>


        <record model='ir.ui.view' id='fleet_vehicle_log_services_view_inht'>
        <field name="name">fleet.vehicle.log.services_view</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet_operations.fleet_vehicle_log_services_view_inherit" />
        <field name="arch" type="xml">

             <xpath expr="//div[@name='button_box']" position="inside">
                    <button icon="fa-pencil-square-o"  name="%(action_purchase_fleet)d"
                       class="oe_highlight" type="action"
                      attrs="{'invisible': [('state', '=', 'draft')]}"
                        groups="fleet.fleet_group_manager">

<!--                    <button icon="fa-pencil-square-o" name="" class="oe_stat_button" name="778" type="action" groups="fleet.fleet_group_manager"/>-->
                        <field name="purchase_count" string="Create Requisitions" widget="statinfo"/>
                    </button>

             </xpath>
         <xpath expr="//header" position="inside">
            <!--<header>-->
             <button name="action_create_purchaserec" string="Create Purchase Requisitions" class="oe_highlight" type="object" groups="fleet.fleet_group_manager"/><!--                    <button name="action_create_invoice" string="Create Invoice"-->
            <!--</header>-->
        </xpath>
            <xpath expr="//field[@name='purchaser_id']" position="after">
                <field name="employee_id"/>
            </xpath>
        </field>
        </record>



    </data>
</odoo>
