<odoo>

    <!-- Scheduler to carry forward automatic leaves -->
    <record id="auto_leave_carry_fwd_cron" model="ir.cron">
        <field name="name">Carry Forward Leaves</field>
        <field name="model_id" ref="model_hr_leave_type"/>
        <field name="state">code</field>
        <field name="code">model._auto_lapse_leaves()</field>
        <field name="interval_number">12</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="True"/>
    </record>

</odoo>