<odoo>
    <record id="hr_expense_view" model="ir.ui.view">
        <field name="name">hr.expense.view</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <!--xpath expr="//group/group[3]" position="replace">
                <group>
                     <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <label for="payment_mode"/>
                        <div>
                            <field name="payment_mode" widget="radio"/>
                        </div>
                    <field name="payslip_date"/>
                </group>
            </xpath-->
            
               


            <xpath expr="//group/group[3]" position="after">
                <group invisible ="1">
                     <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <label for="payment_mode"/>
                        <div>
                            <field name="payment_mode" widget="radio"/>
                        </div>
                    <field name="payslip_date"/>
                </group>
                <label for="payslip_date"/>
                <div>
                  <field name="payslip_date"/>
                </div>
               
            </xpath>
        </field>
    </record>
    
<!--    hr.expense.sheet-->

     <record id="hr_expense_sheet_view" model="ir.ui.view">
        <field name="name">hr.expense.sheet.view</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_sheet_move_create']" position="replace">
                    <button name="action_sheet_move_create" string="Post Journal Entries" type="object" groups="account.group_account_manager" class="oe_highlight o_expense_sheet_post" attrs="{'invisible':[('payment_mode','=','payslip'),('state','=','approve')]}"  />
            </xpath>
            <xpath expr="//field[@name='payment_mode']" position="after">
                    <field name="payslip_date"/>
            </xpath>
            <xpath expr="//field[@name='account_move_id']" position="after">
                    <field name="payslip_id" readonly="1"/>
            </xpath>
            
            
        </field>
    </record>
    
</odoo>




