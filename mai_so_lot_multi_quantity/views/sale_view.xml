<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_production_lot_tree_from_so" model="ir.ui.view">
        <field name="name">stock.production.lot.tree.from.so</field>
        <field name="model">stock.production.lot</field>
        <field name="arch" type="xml">
            <tree string="Lots/Serial Numbers">
                <field name="name"/>
                <field name="product_qty" />
                <field name="ref"/>
                <field name="product_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    <record id="view_order_tree_lot" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="lot_ids" widget="many2many_tags" domain="['|',('product_id','=', product_id),('product_qty','&lt;=',0.0)]" context="{'default_product_id': product_id,'tree_view_ref':'mai_so_lot_multi_quantity.view_production_lot_tree_from_so'}" groups="stock.group_production_lot"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                <field name="lot_ids" widget="many2many_tags" domain="['|',('product_id','=', product_id),('product_qty','&lt;=',0.0)]" context="{'default_product_id': product_id,'tree_view_ref':'mai_so_lot_multi_quantity.view_production_lot_tree_from_so'}" groups="stock.group_production_lot"/>
            </xpath>
        </field>
    </record>
</odoo>
