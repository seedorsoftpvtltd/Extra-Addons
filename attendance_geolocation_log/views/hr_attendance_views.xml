<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_in']" position="after">
                <field name="check_in_location_link" widget="url" options="{'button_name':'Geolocation'}"
                    attrs="{'invisible': [('check_in', '=', False)]}"/>                
            </xpath>
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="check_out_location_link" widget="url" options="{'button_name':'Geolocation'}"
                    attrs="{'invisible': [('check_out', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <group name="locations" string="Check-in Location">
                    <group>
                        <field name="check_in_latitude" nolabel="0"/>
                        <field name="check_in_longitude" nolabel="0"/>
                        <field name="check_in_location_link" widget="url" options="{'button_name':'Geolocation'}"  nolabel="0" attrs="{'invisible': [('check_in', '=', False)]}"/>
                    </group>
                </group>
                <group name="locations" string="Check-ou Location">
                    <group>
                        <field name="check_out_latitude" nolabel="0"/>
                        <field name="check_out_latitude" nolabel="0"/>
                        <field name="check_out_location_link" widget="url" options="{'button_name':'Geolocation'}"  nolabel="0"  attrs="{'invisible': [('check_out', '=', False)]}"/>
                    </group>
                </group>               
            </xpath>
        </field>
    </record>    

</odoo>
