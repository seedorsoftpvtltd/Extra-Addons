<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_maint_checklist_template_list_view" model="ir.ui.view">
        <field name="name">maintenance.checklist.template.tree</field>
        <field name="model">maintenance.checklist.template</field>
        <field name="arch" type="xml">
            <tree string="Employee Function">
                <field name="name"/>
                <field name="code"/>
                <field name="mchecklist_ids" widget="many2many_tags"/>

            </tree>
        </field>
    </record>

    <record id="maint_checklist_template_view_kanban" model="ir.ui.view">
        <field name="name">maintenance.checklist.template.kanban</field>
        <field name="model">maintenance.checklist.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Code: <field name="code"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_maint_checklist_template_tree" model="ir.ui.view">
        <field name="name">maintenance.checklist.template.tree</field>
        <field name="model">maintenance.checklist.template</field>
        <field name="arch" type="xml">
            <tree string="Checklist Template">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_maint_checklist_template_filter" model="ir.ui.view">
        <field name="name">maintenance.checklist.template.select</field>
        <field name="model">maintenance.checklist.template</field>
        <field name="arch" type="xml">
            <search string="Checklist Structures">
                <field name="name" string="Checklist Template" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
            </search>
        </field>
    </record>



    <record id="action_view_maint_checklist_template_list_form" model="ir.actions.act_window">
        <field name="name">Checklist Template</field>
        <field name="res_model">maintenance.checklist.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_maint_checklist_template_form"
        action="action_view_maint_checklist_template_list_form"
        name="Checklist Template"
        sequence="-2" parent="maintenance.menu_maintenance_configuration"/>

    <record id="view_checklist_checklist_tree" model="ir.ui.view">
        <field name="name">mchecklist.mchecklist.tree</field>
        <field name="model">mchecklist.mchecklist</field>
        <field name="arch" type="xml">
            <tree>

                <field name="type"/>
                <field name="active"/>

            </tree>
        </field>
    </record>

     <record id="view_check_check_form" model="ir.ui.view">
        <field name="name">maintcheck.check.form</field>
        <field name="model">maintcheck.check</field>
        <field name="arch" type="xml">
            <form string="check">
                <field name="name"/>
            </form>
        </field>
     </record>
    <record id="view_check_check_tree" model="ir.ui.view">
        <field name="name">maintcheck.check.tree</field>
        <field name="model">maintcheck.check</field>
        <field name="arch" type="xml">
            <tree string="check">
                <field name="name"/>
<!--                <field name="image"/>-->


            </tree>
        </field>
     </record>
