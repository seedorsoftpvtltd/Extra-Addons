<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_job_estimate_relocation_from" model="ir.ui.view">
        <field name="name">sale.estimate.job.form.relocation</field>
        <field name="model">sale.estimate.job</field>
        <field name="inherit_id" ref="job_cost_estimate_customer.view_sale_estimate_form_job"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='product']/field[@name='job_estimate_product_id']/tree/field[@name='product_description']"
                   position="before">
                <field name="product_id" required="1"/>
            </xpath>
            <xpath expr="//page[@name='product']/field[@name='job_estimate_product_id']/tree/field[@name='product_name_job']"
                   position="replace">
                <field name="product_name_job" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>