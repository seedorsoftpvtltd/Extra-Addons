<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    	<!-- MOM Reports -->
        <report 
            string="Minutes Of Meeting" 
            id="action_report_foss_mom" 
            model="calendar.event" 
            report_type="qweb-pdf"
            name="foss_mom.report_foss_mom" 
            file="foss_mom.report_foss_mom"
        />

            <!--MOM report paper format -->
            <record id="paperformat_foss_mom_report" model="report.paperformat">
            <field name="name">Minutes Of Meeting</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">51</field>
            <field name="dpi">90</field>
        </record>


            <record id="foss_mom.action_report_foss_mom" model="ir.actions.report">
                <field name="paperformat_id" ref="foss_mom.paperformat_foss_mom_report" />
            </record>

    </data>
</odoo>
