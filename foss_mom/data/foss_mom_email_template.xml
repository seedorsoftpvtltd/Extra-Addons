<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_foss_mom" model="mail.template">
            <field name="name">Minutes Of Meeting - Email</field>
            <field name="model_id" ref="foss_mom.model_calendar_event"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="subject">Minutes Of meeting for ${object.name}</field>
            <field name="report_template" ref="foss_mom.action_report_foss_mom"/>
            <field name="report_name">MOM - ${object.name}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear All,
                        <br /><br />
                        Here is the attachment of Minutes Of Meeting for <strong>${object.name}</strong>
                        <br /><br />
                        This is a system generated E-mail. Please do not reply.
                        <br></br>
                        Thank You.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo> 



            