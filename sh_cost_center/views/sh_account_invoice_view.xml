<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_customer_invoice_form_view" model="ir.ui.view">
			<field name="name">sh.customer.invioce.form.view</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<field name="ref" position="after">
					<field name="sh_cost_center_id"/>
				</field>
				<xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='quantity']" position="after">
					<field name="sh_cost_center_id"/>
				</xpath>
				<xpath expr="//field[@name='line_ids']//tree//field[@name='quantity']" position="after">
					<field name="sh_cost_center_id"/>
				</xpath>
			</field>
		</record>
		<record id="sh_account_invoice_search_view" model="ir.ui.view">
			<field name="name">sh.account.invoice.search.view</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_account_invoice_filter"/>
			<field name="arch" type="xml">
				<field name="name" position="before">
					<field name="sh_cost_center_id"/>
				</field>
				<filter name="myinvoices" position="before">
					<filter name="cost_center" string="Cost Centers" context="{'group_by':'sh_cost_center_id'}"/>
				</filter>
			</field>
		</record>
	</data>
</odoo>