<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_sale_order_form_view" model="ir.ui.view">
			<field name="name">sh.sale.order.form.view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<field name="payment_term_id" position="after">
					<field name="sh_cost_center_id"/>
				</field>
				<xpath expr="//field[@name='order_line']//tree//field[@name='qty_invoiced']" position="after">
					<field name="sh_cost_center_id"/>
				</xpath>
			</field>
		</record>
		<record id="sh_sale_order_search_view" model="ir.ui.view">
			<field name="name">sh.sale.order.search.view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_sales_order_filter"/>
			<field name="arch" type="xml">
				<field name="partner_id" position="before">
					<field name="sh_cost_center_id"/>
				</field>
				<filter name="salesperson" position="before">
					<filter string="Cost Centers" name="cost_center" domain="[]" context="{'group_by':'sh_cost_center_id'}"/>
				</filter>
			</field>
		</record>
	</data>
</odoo>