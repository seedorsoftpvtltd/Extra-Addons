<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_line_form" model="ir.ui.view">
        <field name="name">account.payment.linee.form</field>
        <field name="model">account.payment.linee</field>
        <field name="arch" type="xml">
            <form string="Payment Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="amount"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_payment_line_tree" model="ir.ui.view">
        <field name="name">account.payment.linee.tree</field>
        <field name="model">account.payment.linee</field>
        <field name="arch" type="xml">
            <tree string="Payment Type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="action_account_payment_line" model="ir.actions.act_window">
        <field name="name">Payment Type</field>
        <field name="res_model">account.payment.linee</field>
        <field name="view_mode">form,tree</field>
    </record>

</odoo>