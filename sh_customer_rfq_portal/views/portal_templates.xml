<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_customer_rfq_portal_assets_frontend" inherit_id="portal.assets_frontend">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/sh_customer_rfq_portal/static/src/js/portal.js" />
        </xpath>
    </template>
    <template id="portal_my_home_menu_customer_rfq" name="Portal layout : customer rfq menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'customer_rfq_portal'" t-attf-class="breadcrumb-item #{'active'}">
                <a t-attf-href="/my/customer_portal_rfq?{{ keep_query() }}">Request Product</a>
            </li>
        </xpath>
    </template>
    <template id="portal_my_home_customer_rfq" name="Show Customer Rfq Portal Product" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Request Product</t>
                <t t-set="url" t-value="'/my/customer_portal_rfq'" />
            </t>
        </xpath>
    </template>
    <template id="sh_portal_request_customer_rfq_product" name="Customer RFQ">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
            <t t-call="portal.portal_searchbar"> </t>
            <t t-set="title">Request Product</t>
            <form action="/my/customer_rfq_create" method="post" class="" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <label class="control-label" for="js_id_shipping_address_list">Shipping Address</label>
                        <div t-attf-class="form-group #{error and 'js_id_shipping_address_list' in error and 'has-error' or ''}">
                            <select class="form-control form-field o_website_form_required_custom" id="js_id_shipping_address_list" name="js_id_shipping_address_list" required="True">
                                <t t-foreach="request.env['res.partner'].sudo().search([('id','=',request.env.user.partner_id.id)])" t-as="partner">
                                    <option t-att-value="partner.id">
                                        <t t-esc="partner.name_get()[0][1]" />
                                    </option>
                                    <t t-if="partner.child_ids">
                                        <t t-foreach="partner.child_ids" t-as="child">
                                            <t t-set="selected" t-value="False" />
                                            <t t-if="child.type=='delivery'">
                                                <t t-set="selected" t-value="True" />
                                            </t>
                                            <option t-att-value="child.id" t-att-selected="selected">
                                                <t t-esc="child.name_get()[0][1]" />
                                            </option>
                                        </t>
                                    </t>
                                </t>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <label class="control-label" for="js_id_invoice_address_list">Invoice Address</label>
                        <div t-attf-class="form-group #{error and 'js_id_invoice_address_list' in error and 'has-error' or ''}">
                            <select class="form-control form-field o_website_form_required_custom" id="js_id_invoice_address_list" name="js_id_invoice_address_list" required="True">
                                <t t-foreach="request.env['res.partner'].sudo().search([('id','=',request.env.user.partner_id.id)])" t-as="partner">
                                    <option t-att-value="partner.id">
                                        <t t-esc="partner.name_get()[0][1]" />
                                    </option>
                                    <t t-if="partner.child_ids">
                                        <t t-foreach="partner.child_ids" t-as="child">
                                            <t t-set="selected" t-value="False" />
                                            <t t-if="child.type=='invoice'">
                                                <t t-set="selected" t-value="True" />
                                            </t>
                                            <option t-att-value="child.id" t-att-selected="selected">
                                                <t t-esc="child.name_get()[0][1]" />
                                            </option>
                                        </t>
                                    </t>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>
                <br />
                <select class="form-control form-field o_website_form_required_custom" id="js_id_product_list" name="js_id_product_list" style="display: none;">
                    <option value="">Select Product</option>
                    <t t-foreach="request.env['product.product'].sudo().search([])" t-as="product">
                        <option t-att-value="product.id">
                            <t t-esc="product.name_get()[0][1]" />
                        </option>
                    </t>
                </select>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <div class="container pt-4">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="rfq_table">
                            <thead>
                                <tr>
                                    <th class="text-center">Product Image</th>
                                    <th class="text-center">Product</th>
                                    <th class="text-center">Total QTY</th>
                                    <th class="text-center" width="7%">Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a id="addBtn" class="btn btn-success fa fa-plus" name="addBtn" style="margin-bottom: 10px; font-size: 16px; color: white;" title="Add Product" aria-label="Add Product" role="button">
                            Add Product
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <textarea class="form-control" name="note" placeholder="Description" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" id="create_customer_rfq" class="btn btn-primary">Send Request</button>
                    </div>
                </div>
            </form>
            <t t-if="quote_msg and quote_msg.get('success',False)">
                <div class="alert alert-success"><strong>Success!</strong> <span t-esc="quote_msg.get('success',False)" /></div>
            </t>
        </t>
    </template>
</odoo>
