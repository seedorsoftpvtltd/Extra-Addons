<odoo>
    <!-- Fake rule for ordinary users so that ORM will not raise AccessDenied" -->
    <record id="asterisk_calls_call_base_user_rule" model="ir.rule">
        <field name="name">Asterisk calls base user rule</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>                
        <field name="model_id" ref="model_asterisk_calls_call"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('id','=',0)]</field>
    </record>

    <record id="asterisk_calls_call_user_rule" model="ir.rule">
        <field name="name">Asterisk call call rule</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>                
        <field name="model_id" ref="model_asterisk_calls_call"/>
        <field name="groups" eval="[(4, ref('asterisk_common.group_asterisk_user'))]"/>
        <field name="domain_force">['|','|',
            ('src_user','=', user.id),
            ('partner.user_id', '=', user.id),
            ('dst_user', '=', user.id)]</field>
    </record>

